
@{
    ViewBag.Title = "solicitudes";
    Page.Title = "Solicitudes de Aprobación - Brokolee Software";
}

<div class="page-content-wrapper">

    <div class="container-fluid">

        <div class="row">
            <div class="col-sm-12">
                <div class="page-title-box">
                    <div class="float-left">
                        <div class="breadcrumb float-md-right">
                            <h4 class="page-title">Solicitudes de Aprobación</h4>
                        </div>
                    </div>
                    <div class="float-right">
                        <ul class="breadcrumb float-md-right">
                            <li class="breadcrumb-item"><a href="@Url.Action("panel", "control", new { area = "coadmin" })" class="text-success"><i class="mdi mdi-home-modern"></i> Panel de Control</a></li>
                            <li class="breadcrumb-item active">Solicitudes de Aprobación</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        <!-- end page title end breadcrumb -->
        <div class="row">
            <div class="col-lg-12">
                <div class="card m-b-30">
                    <div class="card-body">
                        <div class="input-group">
                            @using (Html.BeginForm("SeacrhSolResult", "facilidades", FormMethod.Post, new
                            {
                                id = "searchForm",
                                @class = "search-form",
                                area = "coadmin",
                                enctype = "multipart/form-data"
                            }))
                            {
                                @Html.AntiForgeryToken()
                                <input type="text" id="example-input1-group2" name="searchStr" value="@Model.searchStr"
                                       class="form-control" placeholder="Buscar solicitudes...">
                                <span class="input-group-append">
                                    <button type="submit" class="btn btn-effect-ripple btn-primary"><i class="fas fa-search"></i> Buscar </button>
                                </span>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div><!--end row-->
        <!-- back button -->
        <div class="row pb-4">
            <div class="col-md-6">
                <a href="javascript:history.back()"><button type="button" class="btn btn-light waves-effect waves-light"><i class="mdi mdi-keyboard-return"></i> Regresar</button></a>
            </div>
        </div>
        <!-- end back button -->

        <div class="row">
            <div class="col-12">
                <div class="card m-b-30">
                    <div class="card-body">
                        <div class="row form-material">
                            <div class="col-md-6">
                                <h5 class="d-inline-block">Listado</h5>
                            </div>
                            <div class="col-md-6 mb-1">
                                <a href="@Url.Action("agregar", "facilidades", new { area = "coadmin" })"><button type="button" class="btn btn-primary waves-effect waves-light float-xl-right float-lg-right float-md-left">Agregar nuevo</button></a>
                            </div>
                        </div>
                        <div class="table-responsive">
                            <table id="dataTable-tareas-completadas" class="table table-striped table-bordered normal" style="border-collapse: collapse; border-spacing: 0; width: 100%;">
                                <thead class="header-table">
                                    <tr>
                                        <th class="f-b">Fecha de solicitud</th>
                                        <th class="f-b">Nombre</th>
                                        <th class="f-b">Descripción de la Actividad</th>
                                        <th class="f-b">Hora Inicio</th>
                                        <th class="f-b">Hora Fin</th>
                                        <th class="f-b">Intervalo</th>
                                        <th class="f-b">Status</th>
                                        @*<th class="f-b">Solicitud</th>*@
                                        <th class="f-b">Reglamento</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.efacList)
                                    {
                                        <tr>
                                            <td>@Convert.ToDateTime(item.created_at).ToString("MM/dd/yyyy")</td>
                                            <td>@item.first_name</td>
                                            <td>@item.description.</td>
                                            <td class="text-center">@DateTime.Today.Add(item.start_time).ToString("hh:mm tt")</td>
                                            <td class="text-center">@DateTime.Today.Add(item.end_time).ToString("hh:mm tt")</td>
                                            <td class="text-center">@item.duration horas</td>
                                            <td class="text-center">
                                                @if (item.status == 1)
                                                {
                                                    <button  onclick="onDeactiveSolicitud(this)"  data-id="@item.id"    type="button" class="btn btn-danger waves-effect waves-light btn-sm" >Rechazado</button>
                                                }
                                                else
                                                {
                                                    <button onclick="onActiveSolicitud(this)" data-id="@item.id"  type="button"  class="btn btn-warning waves-effect waves-light btn-sm mb-1">Aprobado</button>
                                                }
                                             
                                            </td>
                                            @*<td class="text-center">
                                                <button type="button" 
                                                    class="btn btn-primary waves-effect waves-light btn-sm mr-1 mb-1" 
                                                    data-toggle="tooltip" data-placement="top" title="Aprobar">
                                                    <i class="mdi mdi-thumb-up"></i>
                                                </button>
                                                <button type="button" 
                                                    class="btn btn-danger waves-effect waves-light btn-sm mb-1"
                                                    data-toggle="tooltip" 
                                                    data-placement="top" title="Rechazar">
                                                    <i class="mdi mdi-thumb-down"></i>
                                                </button>
                                            </td>*@
                                        <td class="text-center">
                                            @if (item.upload_regulation != null)
                                            {
                                                <a href="~/Upload/Regulation/@item.upload_regulation" download="">
                                                    <button type="button" class="btn btn-info waves-effect waves-light btn-sm"
                                                            data-toggle="tooltip" data-placement="top" title="Descargar">
                                                        <i class="mdi mdi-cloud-download"></i>
                                                    </button>
                                                </a>

                                             

                                            }
                                            else
                                            {
                                                <a href="">
                                                    <button type="button" class="btn btn-info waves-effect waves-light btn-sm"
                                                            data-toggle="tooltip" data-placement="top" title="Descargar">
                                                        <i class="mdi mdi-cloud-download"></i>
                                                    </button>
                                                </a>
                                            }


                                        </td>

                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>

                    </div>
                </div>
            </div>
        </div><!-- end row -->
        <!-- back button -->
        <div class="row pb-4">
            <div class="col-md-6">
                <a href="javascript:history.back()"><button type="button" class="btn btn-light waves-effect waves-light"><i class="mdi mdi-keyboard-return"></i> Regresar</button></a>
            </div>
        </div>
        <!-- end back button -->

    </div><!-- container -->

</div> <!-- Page content Wrapper -->