@{
    ViewBag.Title = "listado";
    Page.Title = "Listado de cuotas - Brokolee Software";
}

<div class="page-content-wrapper">

    <div class="container-fluid">

        <div class="row">
            <div class="col-sm-12">
                <div class="page-title-box">
                    <div class="float-left">
                        <div class="breadcrumb float-md-right">
                            <h4 class="page-title">Listado de Cuotas</h4>
                        </div>
                    </div>
                    <div class="float-right">
                        <ul class="breadcrumb float-md-right">
                            <li class="breadcrumb-item"><a href="@Url.Action("panel", "control", new { area = "coadmin" })" class="text-success"><i class="mdi mdi-home-modern"></i> Panel de control</a></li>
                            <li class="breadcrumb-item active">Listado de cuotas</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        <!-- end page title end breadcrumb -->
        <div class="row">
            <div class="col-lg-12">
                <div class="card m-b-30">
                    <div class="card-body">
                        <div class="row form-material">
                            <div class="input-group col-md-6 mb-2">
                                <input type="text" id="search-input" name="searchString"
                                       class="form-control" value=""
                                       placeholder="Escribe palabra clave para la búsqueda">
                                <span class="input-group-append">
                                    <button type="submit" id="search-button" class="btn btn-effect-ripple btn-primary"><i class="fas fa-search"></i> Buscar </button>
                                </span>
                            </div>
                            <div class="input-group col-md-6">

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div><!--end row-->
        
        <!-- back button -->
        <div class="row pb-4">
            <div class="col-md-6">
                <a href="javascript:history.back()"><button type="button" class="btn btn-light waves-effect waves-light"><i class="mdi mdi-keyboard-return"></i> Regresar</button></a>
            </div>
        </div>
        <!-- end back button -->

        <div class="row">
            <div class="col-12">
                <div class="card m-b-30">
                    <div class="card-body">
                        <div class="row form-material">
                            <div class="col-md-6">
                                
                            </div>
                            <div class="col-md-6 mb-1">
                                <a href="@Url.Action("agregar", "cuotas", new { area = "coadmin" })">
                                    <button type="button" class="btn btn-primary waves-effect waves-light float-xl-right float-lg-right float-md-left mb-1">Agregar</button>
                                </a>
                            </div>
                        </div>

                        <div class="table-responsive">
                            <table id="dataTable-directorio-suplidores" class="table table-striped table-bordered normal" style="border-collapse: collapse; border-spacing: 0; width: 100%;">
                                <thead>
                                    <tr>
                                        <th class="f-b">Nombre</th>
                                        <th class="f-b">Nombre del banco</th>
                                        <th class="f-b">Cuenta comercial</th>
                                        <th class="f-b">Costo</th>
                                        <th class="f-b">Cargo de impuestos</th>
                                        <th class="f-b">Pena</th>
                                        <th class="f-b">Fecha</th>
                                        <th class="f-b text-center">Editar / Eliminar</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.feeList)
                                    {
                                        <tr>
                                            <td>@item.name</td>
                                            <td>@Model.bankDict[item.bank_id]</td>
                                            <td>@item.merchant_account</td>
                                            <td class="text-center">@item.cost</td>
                                            <td class="text-center">@item.tax_charge</td>
                                            <td class="text-center">@item.penalty</td>
                                            <td class="text-center">@Convert.ToDateTime(item.created_at).ToString("MM/dd/yyyy")</td>
                                            <td class="text-center">
                                                <a href="@Url.Action("editar", "cuotas", new { area = "coadmin", editID = item.id })">
                                                    <button type="button" class="btn btn-primary waves-effect waves-light btn-sm mr-1 mb-1"
                                                            data-toggle="tooltip" data-placement="top" title="Editar">
                                                        <i class="mdi mdi-lead-pencil"></i>
                                                    </button>
                                                </a>
                                                <a href="#">
                                                    <button type="button" onclick="onDeleteFee(this)" data-id="@item.id"
                                                            class="btn btn-danger waves-effect waves-light btn-sm mb-1"
                                                            data-toggle="tooltip" data-placement="top" title="Eliminar">
                                                        <i class="mdi mdi-delete"></i>
                                                    </button>
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>

                    </div>
                </div>
            </div>
        </div><!-- end row -->
        <!-- back button -->
        <div class="row pb-4">
            <div class="col-md-6">
                <a href="javascript:history.back()"><button type="button" class="btn btn-light waves-effect waves-light"><i class="mdi mdi-keyboard-return"></i> Regresar</button></a>
            </div>
        </div>
        <!-- end back button -->

    </div><!-- container -->

</div> <!-- Page content Wrapper -->