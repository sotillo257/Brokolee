
@{
    ViewBag.Title = "blog";
    Page.Title = "Editar Entrada - Brokolee Software";
}

<div class="page-content-wrapper">

    <div class="container-fluid">

        <div class="row">
            <div class="col-sm-12">
                <div class="page-title-box">
                    <div class="float-left">
                        <div class="breadcrumb float-md-right">
                            <h4 class="page-title">Editar Entrada</h4>
                        </div>
                    </div>
                    <div class="float-right">
                        <ul class="breadcrumb float-md-right">
                            <li class="breadcrumb-item"><a href="@Url.Action("panel", "control", new { area = "coadmin" })" class="text-success"><i class="mdi mdi-home-modern"></i> Panel de Control</a></li>
                            <li class="breadcrumb-item active">Editar Entrada</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        <!-- end page title end breadcrumb -->
        <!-- back button -->
        <div class="row pb-4">
            <div class="col-md-6">
                <a href="javascript:history.back()"><button type="button" class="btn btn-light waves-effect waves-light"><i class="mdi mdi-keyboard-return"></i> Regresar</button></a>
            </div>
        </div>
        <!-- end back button -->

        <div class="row">
            <div class="col-12">
                <div class="card">
                    @using (Html.BeginForm("editblog", "comunicaciones",
                        FormMethod.Post,
                    new
                    {
                        id = "editblogForm",
                        @class = "",
                        enctype = "multipart/form-data",
                        area = "coadmin"
                    }))
                    {
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="editID" value="@Model.editBlog.id"/>
                        <div class="card-body">
                            <h5 class="d-inline-block">Nuevo Blog</h5>
                            <div class="form-divider"></div>
                            <div class="form-group row">
                                <label for="example-email-input-1" class="col-sm-3 col-form-label">Título</label>
                                <div class="col-sm-9">
                                    <input class="form-control" type="text" value="@Model.editBlog.title" name="title"
                                           data-toggle="tooltip" title="Título descriptivo del blog"
                                           placeholder="Título" id="example-email-input-1" required />
                                    <small class="form-text text-muted">Título descriptivo del blog</small>
                                </div>
                            </div>
                            <div class="form-divider"></div>
                            <div class="form-group row">
                                <label for="example-email-input-2" class="col-sm-3 col-form-label">Autora</label>
                                <div class="col-sm-9">
                                    <input class="form-control" type="text" value="@Model.editBlog.author" name="author"
                                           data-toggle="tooltip" title="Autora descriptivo del blog" placeholder="Autora"
                                           id="example-email-input-2" required />
                                    <small class="form-text text-muted">Autora descriptivo del blog</small>
                                </div>
                            </div>
                            <div class="form-divider"></div>
                            <div class="form-group row">
                                <label for="example-email-input-3" class="col-sm-3 col-form-label">Contenido</label>
                                <div class="col-sm-9">
                                    <textarea class="form-control" name="content" data-toggle="tooltip"
                                              title="Contenido descriptivo del blog">@Model.editBlog.content</textarea>
                                    <small class="form-text text-muted">Contenido descriptivo del blog</small>
                                </div>
                            </div>
                            <div class="form-divider"></div>
                            <a href=""><button type="submit" class="btn btn-primary waves-effect waves-light">Editar Entrada</button></a>
                            <a href="@Url.Action("blog", "comunicaciones", new { area = "coadmin" })"><button type="button" class="btn btn-danger waves-effect waves-light">Cancelar</button></a>
                        </div>
                    }
                </div>
            </div>
        </div><!-- end row -->
        <!-- back button -->
        <div class="row pb-4">
            <div class="col-md-6">
                <a href="javascript:history.back()"><button type="button" class="btn btn-light waves-effect waves-light"><i class="mdi mdi-keyboard-return"></i> Regresar</button></a>
            </div>
        </div>
        <!-- end back button -->

    </div><!-- container -->

</div> <!-- Page content Wrapper -->
