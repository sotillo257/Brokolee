
@{
    ViewBag.Title = "agregar";
    Page.Title = "Agregar Contrato - Brokolee Software";
}

<script src="~/Scripts/jquery-3.1.1.min.js"></script>


<link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">

<script src="https://code.jquery.com/jquery-1.12.4.js"></script>
<script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>

<div class="page-content-wrapper">

    <div class="container-fluid">

        <div class="row">
            <div class="col-sm-12">
                <div class="page-title-box">
                    <div class="float-left">
                        <div class="breadcrumb float-md-right">
                            <h4 class="page-title">Agregar Contrato</h4>
                        </div>
                    </div>
                    <div class="float-right">
                        <ul class="breadcrumb float-md-right">
                            <li class="breadcrumb-item"><a href="@Url.Action("panel", "control", new { area = "coadmin" })" class="text-success"><i class="mdi mdi-home-modern"></i> Panel de Control</a></li>
                            <li class="breadcrumb-item active">Agregar Contrato</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>

        <!-- back button -->
        <div class="row pb-4">
            <div class="col-md-6">
                <a href="javascript:history.back()"><button type="button" class="btn btn-light waves-effect waves-light"><i class="mdi mdi-keyboard-return"></i> Regresar</button></a>
            </div>
        </div>
        <!-- end back button -->
        <!-- end page title end breadcrumb -->
        <div class="row">

            <div class="col-12">
                <div class="card">
                    @using (Html.BeginForm("newcontract", "contratos",
                        FormMethod.Post,
                        new
                        {
                            id = "newcontractForm",
                            @class = "",
                            area = "coadmin",
                            enctype = "multipart/form-data"
                        }))
                    {
                        @Html.AntiForgeryToken()
                        <div class="card-body">
                            <h5 class="d-inline-block">Nuevo Contrato</h5>
                            <div class="form-divider"></div>
                            <div class="form-group row">
                                <label for="example-email-input" class="col-sm-3 col-form-label">Nombre</label>
                                <div class="col-sm-9">
                                    <input class="form-control" type="text" value=""
                                           data-toggle="tooltip" title="Nombre del Contrato"
                                           name="first_name" required
                                           placeholder="Nombre" id="example-email-input">
                                    <small class="form-text text-muted">Nombre del Contrato</small>
                                </div>
                            </div>
                            <div class="form-divider"></div>
                            <div class="form-group row">
                                <label for="example-date-input" class="col-sm-3 col-form-label">Fecha del Contrato</label>
                                <div class="col-sm-9">
                                    <input class="form-control" type="date"
                                           data-toggle="tooltip" title="Mes / día / año | Fecha del día que se subió el Contrato"
                                           name="date_contract" required
                                           value="" id="example-date-input">
                                    <small class="form-text text-muted">Mes / día / año | Fecha del día que se subió el Contrato</small>
                                </div>
                            </div>
                            <div class="form-divider"></div>
                            <div class="form-group row">
                                <label for="example-date-input" class="col-sm-3 col-form-label">Fecha de notificación</label>
                                <div class="col-sm-9">
                                    <input class="form-control" type="date" value="" name="date_notification"
                                           data-toggle="tooltip" title="Mes / día / año | Fecha que se recibirá recordatorio de vencimiento del contrato"
                                           id="example-date-input-ven" required>
                                    <small class="form-text text-muted">Mes / día / año | Fecha que se recibirá recordatorio de vencimiento del contrato</small>
                                </div>
                            </div>
                            <div class="form-divider"></div>
                            <div class="form-group row">
                                <label for="example-name2-input" class="col-sm-3 col-form-label">Subir Contrato</label>
                                <div class="col-sm-9">
                                    <div class="input-group mt-2">
                                        <div class="custom-file">
                                            <input type="file" class="custom-file-input" id="inputGroupFile04"
                                                   name="upload_contract">
                                            <label id="archeditar2"class="custom-file-label" for="inputGroupFile04">Seleccionar archivo</label>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="form-divider"></div>
                            <div class="form-group row">
                                <label for="example-lastname1-input" class="col-sm-3 col-form-label">Descripción</label>
                                <div class="col-sm-9">
                                    <textarea class="form-control" rows="3" name="description"
                                              data-toggle="tooltip" title="Descripción de la tarea"
                                              placeholder="Descripción"></textarea>
                                    <small class="form-text text-muted">Descripción de la tarea</small>
                                </div>
                            </div>
                            <div class="form-divider"></div>
                            <a href=""><button type="submit" class="btn btn-primary waves-effect waves-light">Guardar</button></a>
                            <a href="javascript:history.back()"><button type="button" class="btn btn-danger waves-effect waves-light">Cancelar</button></a>
</div>
                    }
                </div>
            </div>
        </div><!-- end row -->
        <!-- back button -->
        <div class="row pb-4">
            <div class="col-md-6">
                <a href="javascript:history.back()"><button type="button" class="btn btn-light waves-effect waves-light"><i class="mdi mdi-keyboard-return"></i> Regresar</button></a>
            </div>
        </div>
        <!-- end back button -->

    </div><!-- container -->

</div> <!-- Page content Wrapper -->

<script type="text/javascript">

    (function () {

        $('#inputGroupFile04').change(function () {

 
            $('#archeditar2').html($(this)[0].files[0].name);
        });


    })();
</script>