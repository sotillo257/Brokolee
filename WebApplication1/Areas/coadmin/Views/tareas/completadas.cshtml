
@{
    ViewBag.Title = "completadas";
    Page.Title = "Tareas completadas - Brokolee Software";
}

<div class="page-content-wrapper">

    <div class="container-fluid">

        <div class="row">
            <div class="col-sm-12">
                <div class="page-title-box">
                    <div class="float-left">
                        <div class="breadcrumb float-md-right">
                            <h4 class="page-title">Tareas completadas</h4>
                        </div>
                    </div>
                    <div class="float-right">
                        <ul class="breadcrumb float-md-right">
                            <li class="breadcrumb-item"><a href="@Url.Action("panel", "control", new { area = "coadmin" })" class="text-success"><i class="mdi mdi-home-modern"></i> Panel de control</a></li>
                            <li class="breadcrumb-item active">Tareas completadas</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        <!-- end page title end breadcrumb -->
        <div class="row">
            <div class="col-lg-12">
                <div class="card m-b-30">
                    <div class="card-body">
                        <div class="input-group">
                            <input type="text" id="search-input" value="@Model.searchStr"
                                   name="searchStr" class="form-control" placeholder="Buscar tarea...">
                            <span class="input-group-append">
                                <button type="button" id="search-button" class="btn btn-effect-ripple btn-primary"><i class="fas fa-search"></i> Buscar </button>
                            </span>
                        </div>
                    </div>
                </div>
            </div>
        </div><!--end row-->
        <!-- back button -->
        <div class="row pb-4">
            <div class="col-md-6">
                <a href="@Url.Action("panel", "control", new { area = "coadmin" })"><button type="button" class="btn btn-light waves-effect waves-light"><i class="mdi mdi-keyboard-return"></i> Regresar</button></a>
            </div>
        </div>
        <!-- end back button -->

        <div class="row">
            <div class="col-12">
                <div class="card m-b-30">
                    <div class="card-body">
                        <div class="row form-material">
                            <div class="col-md-6">
                                <h5 class="d-inline-block">Listado</h5>
                            </div>
                            @*<div class="col-md-6 mb-1">                                
                                   <a href="@Url.Action("agregar", "tareas", new { area = "coadmin" })"><button type="button" class="btn btn-warning waves-effect waves-light float-xl-right float-lg-right float-md-left">Crear nueva tarea</button></a>                               
                            </div>*@
                        </div>

                        <div class="table-responsive">
                            <table id="dataTable-tareas-completadas" class="table table-striped table-bordered normal" style="border-collapse: collapse; border-spacing: 0; width: 100%;">
                                <thead class="alert-inactive">
                                    <tr>
                                        <th class="f-b">Nombre de tarea</th>
                                        <th class="f-b">Responsable</th>
                                        <th class="f-b">Fecha</th>
                                        <th class="f-b">Completado</th>
                                        <th class="f-b">Archivado</th>
                                        <th class="text-center f-b">Compartir / Privado</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.taskList)
                                    {
                                    <tr class="alert-inactive">
                                        <td>@item.task_name</td>
                                        <td>@item.responsable</td>
                                        <td class="text-center">@Convert.ToDateTime(item.task_date).ToString("MM/dd/yyyy")</td>
                                        @if (item.completed_date != null)
                                        {
                                            <td class="text-center">@Convert.ToDateTime(item.completed_date).ToString("MM/dd/yyyy")</td>
                                        }
                                        else
                                        {
                                            <td class="text-center"></td>
                                        }

                                        @if (item.archived_date != null)
                                        {
                                            <td class="text-center">@Convert.ToDateTime(item.archived_date).ToString("MM/dd/yyyy")</td>
                                        }
                                        else
                                        {
                                            <td class="text-center"></td>
                                        }

                                        <td class="text-center">
                                            @if (item.share == 1)
                                            {
                                                <button type="button" class="btn btn-info waves-effect waves-light btn-sm mr-1 mb-1">General</button>
                                            }
                                            else
                                            {
                                                <button type="button" class="btn btn-warning waves-effect waves-light btn-sm mb-1">Administradores</button>
                                            }
                                        </td>
                                    </tr>
                                    }
                                </tbody>
                            </table>
                        </div>

                    </div>
                </div>
            </div>
        </div><!-- end row -->
        <!-- back button -->
        <div class="row pb-4">
            <div class="col-md-6">
                <a href="@Url.Action("panel", "control", new { area = "coadmin" })"><button type="button" class="btn btn-light waves-effect waves-light"><i class="mdi mdi-keyboard-return"></i> Regresar</button></a>
            </div>
        </div>
        <!-- end back button -->

    </div><!-- container -->

</div> <!-- Page content Wrapper -->