            <div class="col-12">
                <div class="card">
                    @using (Html.BeginForm("editcontact", "contacto", FormMethod.Post,
                    new { id = "editcontactForm", @class = "", area = "coadmin" }))
                    {
                        @Html.AntiForgeryToken()
                        if (Model.editContactInfo == null)
                        {
                            <input type="hidden" name="contactID" value="0" />
                        }
                        else
                        {
                            <input type="hidden" name="contactID" value="@Model.editContactInfo.id" />
