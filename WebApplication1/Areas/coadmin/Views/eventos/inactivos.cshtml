
@{
    ViewBag.Title = "inactivos";
    Page.Title = "Eventos inactivos- Brokolee Software";
}

<div class="page-content-wrapper">

    <div class="container-fluid">

        <div class="row">
            <div class="col-sm-12">
                <div class="page-title-box">
                    <div class="float-left">
                        <div class="breadcrumb float-md-right">
                            <h4 class="page-title">Eventos inactivos</h4>
                        </div>
                    </div>
                    <div class="float-right">
                        <ul class="breadcrumb float-md-right">
                            <li class="breadcrumb-item"><a href="@Url.Action("panel", "control", new { area = "coadmin" })" class="text-success"><i class="mdi mdi-home-modern"></i> Panel de Control</a></li>
                            <li class="breadcrumb-item active">Eventos inactivos</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        <!-- end page title end breadcrumb -->
        <div class="row">
            <div class="col-lg-12">
                <div class="card m-b-30">
                    <div class="card-body">
                        <div class="input-group">
                            @using (Html.BeginForm("SeacrhInResult", "eventos", FormMethod.Post,
                               new
                               {
                                   id = "searchSupplierForm",
                                   @class = "search-form",
                                   area = "coadmin",
                                   enctype = "multipart/form-data"
                               }))
                            {
                                @Html.AntiForgeryToken()
                                <input type="text" id="example-input1-group2" name="searchStr" value="@Model.searchStr"
                                       class="form-control" placeholder="Buscar por nombre...">
                                <span class="input-group-append">
                                    <button type="submit" class="btn btn-effect-ripple btn-primary"><i class="fas fa-search"></i> Buscar </button>
                                </span>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div><!--end row-->
        <!-- back button -->
        <div class="row pb-4">
            <div class="col-md-6">
                <a href="javascript:history.back()"><button type="button" class="btn btn-light waves-effect waves-light"><i class="mdi mdi-keyboard-return"></i> Regresar</button></a>
            </div>
        </div>
        <!-- end back button -->

        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <div class="row form-material">
                            <div class="col-md-6">
                                <h5 class="d-inline-block">Listado de Eventos</h5>
                            </div>
                            <div class="col-md-6 mb-1">
                                <a href="@Url.Action("agregar", "eventos", new { area = "coadmin" })"><button type="button" class="btn btn-primary waves-effect waves-light float-xl-right float-lg-right float-md-left">Agregar evento</button></a>
                            </div>
                        </div>

                        <div class="table-responsive">
                            <table id="dataTable-directorio-suplidores" class="table table-striped table-bordered normal" style="border-collapse: collapse; border-spacing: 0; width: 100%;">
                                <thead class="alert-inactive">
                                    <tr>
                                        <th class="f-b">Nombre del evento</th>
                                        <th class="f-b">Fecha</th>
                                        <th class="f-b">Hora</th>
                                        <th class="f-b">Lugar</th>
                                        <th class="f-b">Descripción</th>
                                        <th class="f-b">Nota</th>
                                        <th class="text-center f-b">Compartir / Privado</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.eventList)             
                                    {
                                    <tr class="alert-inactive">
                                        <td>@item.name</td>
                                        <td>@Convert.ToDateTime(item.event_date).ToString("yyyy-MM-dd")</td>
                                        <td>@Convert.ToDateTime(item.event_date).ToString("HH:mm")</td>
                                        <td>@item.place</td>
                                        <td>@item.description.</td>
                                        <td>@item.note.</td>
                                        @if (item.share == 1)
                                        {
                                            <td class="text-center">
                                                <a href="#">
                                                    <button type="button" class="btn btn-info waves-effect waves-light btn-sm mr-1 mb-1">General</button>
                                                </a>
                                                
                                                <a href="#">
                                                    <button type="button" class="btn btn-info waves-effect waves-light btn-sm mr-1 mb-1" onclick="onEventEnable(@item.id)">Habilitar</button>
                                                </a>
                                            </td>
                                        }
                                        else
                                        {
                                            <td class="text-center">
                                                <button type="button" class="btn btn-warning waves-effect waves-light btn-sm mb-1">Administradores</button>
                                                <a href="#">
                                                    <button type="button" class="btn btn-info waves-effect waves-light btn-sm mr-1 mb-1" onclick="onEventEnable(@item.id)">Habilitar</button>
                                                </a>
                                            </td>
                                        }
                                    </tr>
                                    }

                                                    
                                    
                            </table>
                        </div>

                    </div>
                </div>
            </div>
        </div><!-- end row -->
        <!-- back button -->
        <div class="row pb-4">
            <div class="col-md-6">
                <a href="javascript:history.back()"><button type="button" class="btn btn-light waves-effect waves-light"><i class="mdi mdi-keyboard-return"></i> Regresar</button></a>
            </div>
        </div>
        <!-- end back button -->

    </div><!-- container -->

</div> <!-- Page content Wrapper -->