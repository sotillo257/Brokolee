
@{
    ViewBag.Title = "categoria";
    Page.Title = "Agregar categoría - Brokolee Software";
}

<div class="page-content-wrapper">

    <div class="container-fluid">

        <div class="row">
            <div class="col-sm-12">
                <div class="page-title-box">
                    <div class="float-left">
                        <div class="breadcrumb float-md-right">
                            <h4 class="page-title">Categorías</h4>
                        </div>
                    </div>
                    <div class="float-right">
                        <ul class="breadcrumb float-md-right">
                            <li class="breadcrumb-item"><a href="@Url.Action("panel", "control", new { area = "coadmin" })" class="text-success"><i class="mdi mdi-home-modern"></i> Panel de control</a></li>
                            <li class="breadcrumb-item"><a href="@Url.Action("listado", "documentos", new { area = "coadmin" })" class="text-success"> Documentos</a></li>
                            <li class="breadcrumb-item"><a href="@Url.Action("listadoCategoria", "documentos", new { area = "coadmin" })" class="text-success"> Categorías</a></li>
                            <li class="breadcrumb-item active">Agregar categoría</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        <!-- end page title end breadcrumb -->
        <!-- back button -->
        <div class="row pb-4">
            <div class="col-md-6">
                <a href="@Url.Action("listadoCategoria", "documentos", new { area = "coadmin" })"><button type="button" class="btn btn-light waves-effect waves-light"><i class="mdi mdi-keyboard-return"></i> Regresar</button></a>
            </div>
        </div>
        <!-- end back button -->

        <div class="row">
            @if (ViewBag.msgError != null)
            {
                <div class="col-12">
                    <div class="alert alert-danger" role="alert">
                        <strong>Error: </strong> @ViewBag.msgError
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                </div>
            }
            <div class="col-12">
                <div class="card">
                    @using (Html.BeginForm("createdocumenttype", "documentos", FormMethod.Post,
                        new { id = "createdocumenttypeForm", @class = "", area = "coadmin" }))
                    {
                        @Html.AntiForgeryToken()
                    <div class="card-body">
                        <h5 class="d-inline-block">Nueva categoría</h5>
                        <div class="form-divider"></div>
                        <div class="form-group row">
                            <label for="example-email-input" class="col-sm-3 col-form-label">Nombre</label>
                            <div class="col-sm-9">
                                <input maxlength="20" class="form-control soloTexto" type="text" value="" name="type_name" required
                                       data-toggle="tooltip" title="Nombre de la categoría"
                                       placeholder="Nombre" id="example-email-input">
                                <small class="form-text text-muted">Nombre de la categoría</small>
                            </div>
                        </div>
                        <div class="form-divider"></div>
                        <div class="form-group row">
                            <label for="example-address1-input" class="col-sm-3 col-form-label">Nivel de acceso</label>
                            <div class="col-sm-9">
                                <div class="form-check-inline my-2">
                                    <div class="custom-control custom-checkbox">
                                        <input type="checkbox" class="custom-control-input" id="customCheck6" name="documentTypeShare" value="1"
                                               checked="" data-parsley-multiple="groups" data-parsley-mincheck="2">
                                        <label class="custom-control-label" for="customCheck6">General</label>
                                    </div>
                                </div>
                                <div class="form-check-inline my-2">
                                    <div class="custom-control custom-checkbox">
                                        <input type="checkbox" class="custom-control-input" id="customCheck7" name="documentTypeShare" value="2"
                                               data-parsley-multiple="groups" data-parsley-mincheck="2">
                                        <label class="custom-control-label" for="customCheck7">Administradores</label>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="form-divider"></div>
                        <a href=""><button type="submit" class="btn btn-primary waves-effect waves-light">Guardar</button></a>
                        <a href="@Url.Action("listadoCategoria", "documentos", new { area = "coadmin" })"><button type="button" class="btn btn-danger waves-effect waves-light">Cancelar</button></a>
                    </div>
                    }
                </div>
            </div>
        </div><!-- end row -->       
        <!-- back button -->
        <div class="row pb-4">
            <div class="col-md-6">
                <a href="@Url.Action("listadoCategoria", "documentos", new { area = "coadmin" })"><button type="button" class="btn btn-light waves-effect waves-light"><i class="mdi mdi-keyboard-return"></i> Regresar</button></a>
            </div>
        </div>
        <!-- end back button -->

    </div><!-- container -->

</div> <!-- Page content Wrapper -->
