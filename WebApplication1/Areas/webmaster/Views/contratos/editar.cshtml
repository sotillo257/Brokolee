
@{
    ViewBag.Title = "editar";
    Page.Title = "Editar Contrato - Brokolee Software";
}

<div class="page-content-wrapper">

    <div class="container-fluid">

        <div class="row">
            <div class="col-sm-12">
                <div class="page-title-box">
                    <div class="float-left">
                        <div class="breadcrumb float-md-right">
                            <h4 class="page-title">Editar Contrato</h4>
                        </div>
                    </div>
                    <div class="float-right">
                        <ul class="breadcrumb float-md-right">
                            <li class="breadcrumb-item"><a href="@Url.Action("panel", "control", new { area = "webmaster" })" class="text-success"><i class="mdi mdi-home-modern"></i> Panel de Control</a></li>
                            <li class="breadcrumb-item active">Editar Contrato</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        <!-- end page title end breadcrumb -->
        <!-- back button -->
        <div class="row pb-4">
            <div class="col-md-6">
                <a href="javascript:history.back()"><button type="button" class="btn btn-light waves-effect waves-light"><i class="mdi mdi-keyboard-return"></i> Regresar</button></a>
            </div>
        </div>
        <!-- end back button -->

        <div class="row">
            <div class="col-12">
                <div class="card">
                    @using (Html.BeginForm("editcontract", "contratos", FormMethod.Post,
                      new
                      {
                          id = "editcontractForm",
                          @class = "",
                          area = "webmaster",
                          enctype = "multipart/form-data"
                      }))
                    {
                        @Html.AntiForgeryToken()
                        <input name="contractID" value="@Model.editContract.id" type="hidden" />
                        <div class="card-body">
                            <h5 class="d-inline-block">Contraro de Prestación de Servicios 1</h5>
                            <div class="form-divider"></div>
                            <div class="form-group row">
                                <label for="example-email-input" class="col-sm-3 col-form-label">Nombre</label>
                                <div class="col-sm-9">
                                    <input class="form-control" type="text" value="@Model.editContract.first_name" required
                                           data-toggle="tooltip" title="Nombre del Contrato"
                                           placeholder="Nombre" id="example-email-input" name="first_name">
                                    <small class="form-text text-muted">Nombre del Contrato</small>
                                </div>
                            </div>
                            <div class="form-divider"></div>
                            <div class="form-group row">
                                <label for="example-date-input" class="col-sm-3 col-form-label">Fecha del Contrato</label>
                                <div class="col-sm-9">
                                    <input class="form-control" type="date" required
                                           value="@Convert.ToDateTime(Model.editContract.date_contract).ToString("yyyy-MM-dd")"
                                           name="date_contract" id="example-date-input"
                                           data-toggle="tooltip" title="Mes / día / año | Fecha del día que se subió el Contrato">
                                    <small class="form-text text-muted">Mes / día / año | Fecha del día que se subió el Contrato</small>
                                </div>
                            </div>
                            <div class="form-divider"></div>
                            <div class="form-group row">
                                <label for="example-date-input" class="col-sm-3 col-form-label">Fecha de notificación</label>
                                <div class="col-sm-9">
                                    <input class="form-control" type="date" 
                                           name="date_notification"
                                           data-toggle="tooltip" title="Mes / día / año | Fecha que se recibirá recordatorio de vencimiento del contrato"
                                           value="@Convert.ToDateTime(Model.editContract.date_notification).ToString("yyyy-MM-dd")" 
                                           id="example-date-input">
                                    <small class="form-text text-muted">Mes / día / año | Fecha que se recibirá recordatorio de vencimiento del contrato</small>
                                </div>
                            </div>
                            <div class="form-divider"></div>
                            <div class="form-group row">
                                <label for="example-name2-input" class="col-sm-3 col-form-label">Subir Contrato</label>
                                <div class="col-sm-9">
                                    <div class="input-group mt-2">
                                        <div class="custom-file">
                                            <input type="file" class="custom-file-input" id="inputGroupFile04" name="upload_contract">
                                            <label class="custom-file-label" for="inputGroupFile04">Seleccionar archivo</label>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="form-divider"></div>
                            <div class="form-group row">
                                <label for="example-lastname1-input" class="col-sm-3 col-form-label">Descripción</label>
                                <div class="col-sm-9">
                                    <textarea class="form-control" rows="3" placeholder="Descripción" 
                                              data-toggle="tooltip" title="Descripción de la tarea"
                                              name="description">@Model.editContract.description</textarea>
                                    <small class="form-text text-muted">Descripción de la tarea</small>
                                </div>
                            </div>
                            <div class="form-divider"></div>
                            <div class="form-group row">
                                <label for="example-address1-input" class="col-sm-3 col-form-label">Status</label>
                                <div class="col-sm-9">
                                    <div class="form-check-inline my-2">
                                        <div class="custom-control custom-checkbox">
                                            @if (Model.editContract.status == 1)
                                            {
                                                <input type="checkbox" class="custom-control-input"
                                                       checked="" data-toggle="tooltip" title="Vigente"
                                                       id="customCheck6" data-parsley-multiple="groups"
                                                       value="1" name="status"
                                                       data-parsley-mincheck="2">
                                            }
                                            else
                                            {
                                                <input type="checkbox" class="custom-control-input"
                                                       id="customCheck6" data-parsley-multiple="groups"
                                                       value="1" name="status"
                                                       data-toggle="tooltip" title="Vigente"
                                                       data-parsley-mincheck="2">
                                            }
                                            <label class="custom-control-label" for="customCheck6">Vigente</label>
                                        </div>
                                    </div>
                                    <div class="form-check-inline my-2">
                                        <div class="custom-control custom-checkbox">
                                            @if (Model.editContract.status == 2)
                                            {
                                                <input type="checkbox" class="custom-control-input"
                                                       id="customCheck7"
                                                       data-toggle="tooltip" title="Archivado"
                                                       value="2" name="status" checked
                                                       data-parsley-multiple="groups"
                                                       data-parsley-mincheck="2">
                                            }
                                            else
                                            {
                                                <input type="checkbox" class="custom-control-input"
                                                       id="customCheck7"
                                                       data-toggle="tooltip" title="Archivado"
                                                       value="2" name="status"
                                                       data-parsley-multiple="groups"
                                                       data-parsley-mincheck="2">
                                            }
                                            <label class="custom-control-label" for="customCheck7">Archivado</label>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="form-divider"></div>
                            <a href=""><button type="submit" class="btn btn-primary waves-effect waves-light">Editar Contrato</button></a>
                            <a href=""><button type="button" class="btn btn-danger waves-effect waves-light">Cancelar</button></a>
                        </div>
                    }
                </div>
            </div>
        </div><!-- end row -->
        <!-- back button -->
        <div class="row pb-4">
            <div class="col-md-6">
                <a href="javascript:history.back()"><button type="button" class="btn btn-light waves-effect waves-light"><i class="mdi mdi-keyboard-return"></i> Regresar</button></a>
            </div>
        </div>
        <!-- end back button -->

    </div><!-- container -->

</div> <!-- Page content Wrapper -->