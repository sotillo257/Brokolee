
@{
    ViewBag.Title = "listado";
    Page.Title = "Listado de Titulos - Brokolee Software";
}

<div class="page-content-wrapper">

    <div class="container-fluid">

        <div class="row">
            <div class="col-sm-12">
                <div class="page-title-box">
                    <div class="float-left">
                        <div class="breadcrumb float-md-right">
                            <h4 class="page-title">Listado de Vehículos</h4>
                        </div>
                    </div>
                    <div class="float-right">
                        <ul class="breadcrumb float-md-right">
                            <li class="breadcrumb-item"><a href="@Url.Action("panel", "control", new { area = "webmaster" })" class="text-success"><i class="mdi mdi-home-modern"></i> Panel de Control</a></li>
                            <li class="breadcrumb-item active">Listado de Vehículos</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>

        <!-- back button -->
        <div class="row pb-4">
            <div class="col-md-6">
                <a href="javascript:history.back()"><button type="button" class="btn btn-light waves-effect waves-light"><i class="mdi mdi-keyboard-return"></i> Regresar</button></a>
            </div>
        </div>
        <!-- end back button -->

        <div class="row">
            <div class="col-12">
                <div class="card m-b-30">
                    <div class="card-body">
                        <div class="row form-material">
                            <div class="col-md-6">
                                <h5 class="d-inline-block">Listado</h5>
                            </div>
                            <div class="col-md-6 mb-1">
                                @if ((Model.titulo.CarMax == null && 1 < Model.CantidadDeVehiculos) || Model.titulo.CarMax <= Model.CantidadDeVehiculos)
                                {

                                    <a href="#" class="btn btn-default waves-effect waves-light float-xl-right float-lg-right float-md-left mr-1 mb-1">

                                        Agregar nuevo
                                    </a>
                                }
                                else
                                {
                                    <a href="@Url.Action("agregarVehiculo", "titulares", new { area = "webmaster", Id = Model.titulo.Id })" class="btn btn-primary waves-effect waves-light float-xl-right float-lg-right float-md-left mr-1 mb-1">

                                        Agregar nuevo
                                    </a>
                                }

                            </div>
                        </div>
                        <div class="table-responsive">
                            <table id="dataTable-directorio-suplidores" class="table table-striped table-bordered normal" style="border-collapse: collapse; border-spacing: 0; width: 100%;">
                                <thead>
                                    <tr>
                                        <th class="f-b">Marca</th>
                                        <th class="f-b">Modelo</th>
                                        <th class="f-b">Color</th>
                                        <th class="f-b">Año</th>
                                        <th class="f-b">Tablilla</th>
                                        <th class="f-b">Número de sello</th>
                                        <th class="text-center f-b">Opciones</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.vehiculosList)
                                    {
                                    <tr>
                                        <td>@item.Brand</td>
                                        <td>@item.Model</td>
                                        <td>@item.Color</td>
                                        <td>@item.Year</td>
                                        <td>@item.ClapBoard</td>
                                        <td>@item.StampNumber</td>
                                       
                                        <td class="text-center">
                                            <a href="@Url.Action("verVehiculo", "titulares", new { area = "webmaster", id = item.IdVehiculo })">
                                                <button type="button"
                                                        class="btn btn-success waves-effect waves-light btn-sm mr-1 mb-1"
                                                        data-toggle="tooltip"
                                                        data-placement="top"
                                                        title="Ver">
                                                    <i class="mdi mdi-eye"></i>
                                                </button>
                                            </a>
                                            <a href="@Url.Action("editarVehiculo", "titulares", new { area = "webmaster", id = item.IdVehiculo })">
                                                <button type="button"
                                                        class="btn btn-primary waves-effect waves-light btn-sm mr-1 mb-1"
                                                        data-toggle="tooltip" data-placement="top" title="Editar">
                                                    <i class="mdi mdi-lead-pencil"></i>
                                                </button>
                                            </a>                                           
                                            <a href="#">
                                                <button type="button" onclick="onDeleteTitulares(this)" data-id="@item.IdVehiculo"
                                                        class="btn btn-danger waves-effect waves-light btn-sm mb-1"
                                                        data-toggle="tooltip"
                                                        data-placement="top"
                                                        title="Eliminar">
                                                    <i class="mdi mdi-delete"></i>
                                                </button>
                                            </a>


                                        </td>

                                    </tr>
                                    }
                                </tbody>
                            </table>
                        </div>

                    </div>
                </div>
            </div>
        </div><!-- end row -->
        <!-- back button -->
        <div class="row pb-4">
            <div class="col-md-6">
                <a href="javascript:history.back()"><button type="button" class="btn btn-light waves-effect waves-light"><i class="mdi mdi-keyboard-return"></i> Regresar</button></a>
            </div>
        </div>
        <!-- end back button -->

    </div><!-- container -->
    <form id="exportForm" method="post" action="@Url.Action("ExportCSV", "titulares", new { area = "coadmin", searchStr = Model.searchStr })">
        <input type="submit" style="display: none;" id="id_submit_csv" />
    </form>

    <form method="post" id="csvForm" enctype="multipart/form-data"
          style="display: inline-block"
          action="@Url.Action("ImportCsv", "titulares", new { area = "coadmin" })">
        @Html.AntiForgeryToken()
        <input type="file" name="csv_file" id="id_titular_file_csv" style="display: none;" accept=".csv">

    </form>
</div> <!-- Page content Wrapper -->
