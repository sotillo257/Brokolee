
@{
    ViewBag.Title = "listado";
    Page.Title = "Listado de títulos - Brokolee Software";
}

<div class="page-content-wrapper">

    <div class="container-fluid">

        <div class="row">
            <div class="col-sm-12">
                <div class="page-title-box">
                    <div class="float-left">
                        <div class="breadcrumb float-md-right">
                            <h4 class="page-title">Listado de títulos</h4>
                        </div>
                    </div>
                    <div class="float-right">
                        <ul class="breadcrumb float-md-right">
                            <li class="breadcrumb-item"><a href="@Url.Action("panel", "control", new { area = "webmaster" })" class="text-success"><i class="mdi mdi-home-modern"></i> Panel de control</a></li>
                            <li class="breadcrumb-item"><a href="@Url.Action("listado", "titulares", new { area = "webmaster" })" class="text-success">Titulares</a></li>
                            <li class="breadcrumb-item active">Títulos</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
       
        <!-- back button -->
        <div class="row pb-4">
            <div class="col-md-6">
                <a href="@Url.Action("listado", "titulares", new { area = "webmaster" })"><button type="button" class="btn btn-light waves-effect waves-light"><i class="mdi mdi-keyboard-return"></i> Regresar</button></a>
            </div>
        </div>
        <!-- end back button -->

        <div class="row">
            @if (ViewBag.msgError != null)
            {
                <div class="col-12">
                    <div class="alert alert-danger" role="alert">
                        <strong>Error: </strong> @ViewBag.msgError
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                </div>
            }
            <div class="col-12">
                <div class="card m-b-30">
                    <div class="card-body">
                        <div class="row form-material">
                            <div class="col-md-6">
                                <h5 class="d-inline-block">Listado</h5>
                            </div>
                            <div class="col-md-6 mb-1">
                                <a href="@Url.Action("agregarTitulo", "titulares", new { area = "webmaster", id = Model.IdUserTitular })" class="btn btn-primary waves-effect waves-light float-xl-right float-lg-right float-md-left mr-1 mb-1">

                                    Agregar nuevo
                                </a>
                            </div>
                        </div>
                        <div class="table-responsive">
                            <table id="dataTable-directorio-suplidores" class="table table-striped table-bordered normal" style="border-collapse: collapse; border-spacing: 0; width: 100%;">
                                <thead>
                                    <tr>
                                        <th class="f-b">Comunidad</th>
                                        <th class="f-b">Fecha de adquisición</th>
                                        <th class="f-b">Propiedad</th>
                                        <th class="f-b">¿Está arrendada?</th>
                                        <th class="text-center f-b">Opciones</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.titulosList)
                                    {
                                        <tr>
                                            <td>@item.community.first_name</td>
                                            <td>@item.acq_date.ToString("MM/dd/yyyy")</td>
                                            <td>@item.apartment</td>
                                            @if (item.is_leased)
                                            {
                                                <td>Si</td>
                                            }
                                            else
                                            {
                                                <td>No</td>
                                            }
                                            <td class="text-center">
                                                <a href="@Url.Action("verTitulo", "titulares", new { area = "webmaster", id = item.Id })">
                                                    <button type="button"
                                                            class="btn btn-success waves-effect waves-light btn-sm mr-1 mb-1"
                                                            data-toggle="tooltip"
                                                            data-placement="top"
                                                            title="Ver">
                                                        <i class="mdi mdi-eye"></i>
                                                    </button>
                                                </a>
                                                <a href="@Url.Action("editarTitulo", "titulares", new { area = "webmaster", id = item.Id })">
                                                    <button type="button"
                                                            class="btn btn-primary waves-effect waves-light btn-sm mr-1 mb-1"
                                                            data-toggle="tooltip" data-placement="top" title="Editar">
                                                        <i class="mdi mdi-lead-pencil"></i>
                                                    </button>
                                                </a>
                                                <a href="@Url.Action("listadoVehiculos", "titulares", new { area = "webmaster", id = item.Id })"
                                                   class="btn btn-primary waves-effect waves-light btn-sm mr-1 mb-1"
                                                   data-toggle="tooltip" data-placement="top" title="Listado Vehículos">
                                                    <i class="mdi mdi-car"></i>
                                                </a>
                                                <a href="#">
                                                    <button type="button" onclick="onDeleteTitulo(this)" data-id="@item.Id"
                                                            class="btn btn-danger waves-effect waves-light btn-sm mb-1"
                                                            data-toggle="tooltip"
                                                            data-placement="top"
                                                            title="Eliminar">
                                                        <i class="mdi mdi-delete"></i>
                                                    </button>
                                                </a>

                                            </td>

                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>

                    </div>
                </div>
            </div>
        </div><!-- end row -->
        <!-- back button -->
        <div class="row pb-4">
            <div class="col-md-6">
                <a href="@Url.Action("listado", "titulares", new { area = "webmaster" })"><button type="button" class="btn btn-light waves-effect waves-light"><i class="mdi mdi-keyboard-return"></i> Regresar</button></a>
            </div>
        </div>
        <!-- end back button -->

    </div><!-- container -->
    <form id="exportForm" method="post" action="@Url.Action("ExportCSV", "titulares", new { area = "webmaster", searchStr = Model.searchStr })">
        <input type="submit" style="display: none;" id="id_submit_csv" />
    </form>

    <form method="post" id="csvForm" enctype="multipart/form-data"
          style="display: inline-block"
          action="@Url.Action("ImportCsv", "titulares", new { area = "webmaster" })">
        @Html.AntiForgeryToken()
        <input type="file" name="csv_file" id="id_titular_file_csv" style="display: none;" accept=".csv">

    </form>
</div> <!-- Page content Wrapper -->
<script>
             function onDeleteTitulo(self) {
            var id = $(self).data('id');
            var formData = new FormData();
            formData.append("delID", id);

            var url = "@Url.Action("DeleteTitulo", "titulares", new { area = "webmaster" })";
         var respuesta = confirm("¿Estás seguro que deseas eliminar el título?");
                if (respuesta == true) {
                    $.ajax({
                        url: url,
                        type: "post",
                        data: formData,
                        success: function (result) {
                            $("#ck-body-loading-overlay").hide();
                            if (result.result === "error") {
                                console.log('couln\'t get roles');
                            } else {
                                location.reload();
                            }
                        },
                        processData: false,
                        contentType: false
                    });

                     } else {

                    return false;
                    }
        }
</script>