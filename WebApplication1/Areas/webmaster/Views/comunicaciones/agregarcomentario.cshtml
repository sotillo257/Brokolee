

@{
    ViewBag.Title = "blog";
    Page.Title = "Agregar comentario - Brokolee Software";
}

<div class="page-content-wrapper">

    <div class="container-fluid">

        <div class="row">
            <div class="col-sm-12">
                <div class="page-title-box">
                    <div class="float-left">
                        <div class="breadcrumb float-md-right">
                            <h4 class="page-title">Agregar comentario</h4>
                        </div>
                    </div>
                    <div class="float-right">
                        <ul class="breadcrumb float-md-right">
                            <li class="breadcrumb-item"><a href="@Url.Action("panel", "control", new { area = "webmaster" })" class="text-success"><i class="mdi mdi-home-modern"></i> Panel de control</a></li>
                            <li class="breadcrumb-item"><a href="@Url.Action("blog", "comunicaciones", new { area = "webmaster" })" class="text-success">Blog general</a></li>
                            <li class="breadcrumb-item"><a href="@Url.Action("verblog", "comunicaciones", new { area = "webmaster", blogID = Model.blogID })" class="text-success">Ver blog</a></li>
                            <li class="breadcrumb-item active">Agregar comentario</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        <!-- end page title end breadcrumb -->
        <!-- back button -->
        <div class="row pb-4">
            <div class="col-md-6">
                <a href="@Url.Action("verblog", "comunicaciones", new { area = "webmaster", blogID = Model.blogID })"><button type="button" class="btn btn-light waves-effect waves-light"><i class="mdi mdi-keyboard-return"></i> Regresar</button></a>
            </div>
        </div>
        <!-- end back button -->

        <div class="row">
            <div class="col-12">
                <div class="card">
                    @using (Html.BeginForm("newblogcomentario", "comunicaciones",
                        FormMethod.Post,
                    new
                    {
                        id = "newblogcomentarioForm",
                        @class = "",
                        enctype = "multipart/form-data",
                        area = "webmaster"
                    }))
                    {
                        @Html.AntiForgeryToken()
                        <input name="blogID" value="@Model.blogID" type="hidden" />
                        <div class="card-body">
                            <h5 class="d-inline-block">Nuevo comentario</h5>                          
                            <div class="form-divider"></div>
                            <div class="form-group row">
                                <label for="example-email-input-3" class="col-sm-3 col-form-label">Comentario</label>
                                <div class="col-sm-9">
                                    <textarea maxlength="90" required class="form-control" name="comment" data-toggle="tooltip"
                                              title="Contenido descriptivo del blog"></textarea>
                                    <small class="form-text text-muted">Comentario descriptivo del blog</small>
                                </div>
                            </div>
                            <div class="form-divider"></div>
                            <a href=""><button type="submit" class="btn btn-primary waves-effect waves-light">Agregar Comentario</button></a>
                            <a href="@Url.Action("verblog", "comunicaciones", new { area = "webmaster", blogID = Model.blogID })"><button type="button" class="btn btn-danger waves-effect waves-light">Cancelar</button></a>
                        </div>
                    }
                </div>
            </div>
        </div><!-- end row -->
        <!-- back button -->
        <div class="row pb-4">
            <div class="col-md-6">
                <a href="@Url.Action("verblog", "comunicaciones", new { area = "webmaster", blogID = Model.blogID })"><button type="button" class="btn btn-light waves-effect waves-light"><i class="mdi mdi-keyboard-return"></i> Regresar</button></a>
            </div>
        </div>
        <!-- end back button -->

    </div><!-- container -->

</div> <!-- Page content Wrapper -->