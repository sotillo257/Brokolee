
@{
    ViewBag.Title = "verblog";
    Page.Title = "Ver blog - Brokolee Software";
}

<style>
    .caja {
        box-shadow: 0px 0px 20px 1px rgba(0,0,0,0.2);
        padding: 10px;
        margin-top: 30px;
        background-color: #fff;
    }

     .autor span {
        float: right;
        font-size: 16px;
    }

    .fecha span {
        float: right;
        font-size: 16px;
        color: cornflowerblue;
    }

    .encabezadoBlog  {
        margin-bottom:3px;
    }

        .encabezadoBlog span {
            float: right;
            font-size: 14px;
            color: cornflowerblue;
        }

    .page-content-wrapper {
        margin-bottom: 10px !important;
    }
</style>



<link rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">

<div class="page-content-wrapper">
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-12">
                <div class="page-title-box">
                    <div class="float-left">
                        <div class="breadcrumb float-md-right">
                            <h4 class="page-title">Ver blog</h4>
                        </div>
                    </div>

                    <div class="float-right">
                        <ul class="breadcrumb float-md-right">
                            <li class="breadcrumb-item"><a href="@Url.Action("panel", "control", new { area = "webmaster" })" class="text-success"><i class="mdi mdi-home-modern"></i> Panel de control</a></li>
                            <li class="breadcrumb-item"><a href="@Url.Action("blog", "comunicaciones", new { area = "webmaster" })" class="text-success">Blog</a></li>
                            <li class="breadcrumb-item active">Ver blog</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>

        <!-- end page title end breadcrumb -->
        <!-- back button -->
        <div class="row pb-4">
            <div class="col-md-6">
                <a href="@Url.Action("blog", "comunicaciones", new { area = "webmaster" })"><button type="button" class="btn btn-light waves-effect waves-light"><i class="mdi mdi-keyboard-return"></i> Regresar</button></a>
            </div>
        </div>
        <!-- end back button -->
        <div id="divContenido"></div>              
    </div>
</div>

<div class="card">
    <div class="card-body">
        <div class="row form-material">
            <div class="col-md-6">
                <h5 class="d-inline-block">Comentarios</h5>
            </div>

        </div>

        <div class="table-responsive">
            <table id="blogTable"
                   class="table table-striped table-bordered normal"
                   style="border-collapse: collapse; border-spacing: 0; width: 100%;">
                <thead>
                    <tr>
                        <th>Nombre</th>
                        <th>Comentario</th>
                        <th>Fecha de publicación</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.blogcommentList)
                    {
                        <tr>
                            <td>@item.name</td>
                            <td>@item.comment.</td>
                            <td class="text-center"><span style="display:none!important">@Convert.ToDateTime(item.postdate).ToString("yyyy/MM/dd HH:mm")</span>@Convert.ToDateTime(item.postdate).ToString("MM/dd/yyyy HH:mm")</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <!-- back button -->
        <div class="row pb-4">
            <div class="col-md-6">
                <a href="@Url.Action("blog", "comunicaciones", new { area = "webmaster" })"><button type="button" style="margin-top: 10px;" class="btn btn-light waves-effect waves-light"><i class="mdi mdi-keyboard-return"></i> Regresar</button></a>
            </div>
        </div>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
<script>


    console.log('@Model.Content');


       var url = "@Url.Action("ArmarBlogs", "comunicaciones", new { area = "webmaster" })";
     var compania = new Array();
    var formData = new FormData();

    formData.append('ID', '@Model.Content');

    compania.push(formData);
    $.ajax({
        url: url,
        type: "post",
        data: compania[0],
                success: function (result) {
                    $("#divContenido").append(result);
                },
                processData: false,
                contentType: false
    });
    //.ToString()



    $(document).ready(function () {
          $(".Eliminar").on('click', function () {
            var url = "@Url.Action("eliminarBlog", "comunicaciones", new { area = "webmaster"})";
             var compania = new Array();
          var formData = new FormData();


             var id = $(".Eliminar").attr('data-id');
            formData.append('blogID',  id);

            compania.push(formData);
            $.ajax({
                url: url,
                type: "post",
                data: compania[0],
                        success: function (result) {
                            if (result.result == "success") {
                                window.location.href = "@Url.Action("blog", "comunicaciones", new { area = "webmaster"})";
                            } else {
                                alert("Error al eliminar el blog: "+ result.exception);
                            }
                        },
                        processData: false,
                        contentType: false
            });
        });

         $(".Like").on('click', function () {
            var url = "@Url.Action("AgregarLikeblog", "comunicaciones", new { area = "webmaster" })";
             var compania = new Array();
          var formData = new FormData();


             var id = $(".Like").attr('data-id');
            formData.append('ID',  id);

            compania.push(formData);
            $.ajax({
                url: url,
                type: "post",
                data: compania[0],
                        success: function (result) {
                            //  $("#divContenido").append(result);
                            console.log(result);
                        },
                        processData: false,
                        contentType: false
            });
        });

    });




</script>
