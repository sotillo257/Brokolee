        <!-- back button -->
        <div class="row pb-4">
            <div class="col-md-6">
                <a href="javascript:history.back()"><button type="button" class="btn btn-light waves-effect waves-light"><i class="mdi mdi-keyboard-return"></i> Regresar</button></a>
            </div>
        </div>
        <!-- end back button -->

        <div class="row">
            <div class="col-12">
                <div class="card m-b-30">
                    <div class="card-body">
                        <div class="row form-material">
                            <div class="col-md-6">
                                <h5 class="d-inline-block">Listado</h5>
                            </div>
                            <div class="col-md-6 mb-1">
                                <a href="@Url.Action("agregar", "paquetes", new { area = "webmaster" })"><button type="button" class="btn btn-primary waves-effect waves-light float-xl-right float-lg-right float-md-left mb-1">Agregar nuevo</button></a>
                            </div>
                        </div>
                        <div class="table-responsive">
                            <table id="dataTable-directorio-suplidores" class="table table-striped table-bordered normal" style="border-collapse: collapse; border-spacing: 0; width: 100%;">
                                <thead>
                                    <tr>
                                        <th class="f-b">Nombre del Paquete</th>
                                        <th class="f-b">Tarifa</th>
                                        <th class="f-b">Descripción del Paquete</th>
                                        <th class="f-b">Suscribe link</th>
                                        <th class="text-center f-b">Opciones</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.packageList)
                                    {
                                        <tr>
                                            <td>@item.first_name</td>
                                            <td class="text-center">@item.payment</td>
                                            <td>@item.description.</td>
                                            <td class="text-center"><a href="http://@item.suscribe_link" target="_blank">http://@item.suscribe_link</a></td>
                                            <td class="text-center">
                                                @*<a href="@Url.Action("ver", "paquetes", new { area = "webmaster", viewID = item.id })">
                                                    <button type="button" class="btn btn-success waves-effect waves-light btn-sm mr-1 mb-1" 
                                                            data-toggle="tooltip" data-placement="top" title="Ver">
                                                    <i class="mdi mdi-eye"></i></button>
                                                </a>*@
                                                <a href="@Url.Action("editar", "paquetes", new { area = "webmaster", editID = item.id })">
                                                    <button type="button" class="btn btn-primary waves-effect waves-light btn-sm mr-1 mb-1"
                                                            data-toggle="tooltip" data-placement="top" title="Editar">
                                                            <i class="mdi mdi-lead-pencil"></i>
                                                    </button>
                                                </a>
                                                <a href="#">
                                                    <button type="button" onclick="onDeletePackage(this)" data-id="@item.id" class="btn btn-danger waves-effect waves-light btn-sm mb-1" 
                                                            data-toggle="tooltip" data-placement="top" title="Eliminar">
                                                            <i class="mdi mdi-delete"></i>
                                                    </button>
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>

                    </div>
                </div>
            </div>
        </div><!-- end row -->
        <!-- back button -->
        <div class="row pb-4">
            <div class="col-md-6">
                <a href="javascript:history.back()"><button type="button" class="btn btn-light waves-effect waves-light"><i class="mdi mdi-keyboard-return"></i> Regresar</button></a>
            </div>
        </div>
        <!-- end back button -->

    </div><!-- container -->

