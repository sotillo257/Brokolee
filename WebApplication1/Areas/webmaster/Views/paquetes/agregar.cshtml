
@{
    ViewBag.Title = "agregar";
    Page.Title = "Agregar paquete - Brokolee Software";
}

<div class="page-content-wrapper">

    <div class="container-fluid">

        <div class="row">
            <div class="col-sm-12">
                <div class="page-title-box">
                    <div class="float-left">
                        <div class="breadcrumb float-md-right">
                            <h4 class="page-title">Agregar Paquete</h4>
                        </div>
                    </div>
                    <div class="float-right">
                        <ul class="breadcrumb float-md-right">
                            <li class="breadcrumb-item"><a href="@Url.Action("panel", "control", new { area = "webmaster" })" class="text-success"><i class="mdi mdi-home-modern"></i> Panel de control</a></li>
                            <li class="breadcrumb-item active">Agregar paquete</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        <!-- end page title end breadcrumb -->
        <!-- back button -->
        <div class="row pb-4">
            <div class="col-md-6">
                <a href="javascript:history.back()"><button type="button" class="btn btn-light waves-effect waves-light"><i class="mdi mdi-keyboard-return"></i> Regresar</button></a>
            </div>
        </div>
        <!-- end back button -->

        <div class="row">

            <div class="col-12">
                <div class="card">
                    @using (Html.BeginForm("newpaq", "paquetes",
                       FormMethod.Post, new
                       {
                           id = "editpaqForm",
                           @class = "",
                           area = "webmaster",
                           enctype = "multipart/form-data"
                       }))
                    {
                        @Html.AntiForgeryToken()
                    <div class="card-body">
                        <h5 class="d-inline-block">Nuevo paquete</h5>
                        <div class="form-divider"></div>
                        <div class="form-group row">
                            <label for="example-email-input" class="col-sm-3 col-form-label">Nombre</label>
                            <div class="col-sm-9">
                                <input maxlength="30" class="form-control soloTexto" type="text" value="" name="first_name" required
                                       placeholder="Nombre" id="example-email-input"
                                       data-toggle="tooltip" title="Nombre del paquete" />
                                <small class="form-text text-muted">Nombre del paquete</small>
                            </div>
                        </div>
                        <div class="form-divider"></div>
                        <div class="form-group row">
                            <label for="example-date-input" class="col-sm-3 col-form-label">Tarifa</label>
                            <div class="col-sm-9">
                                <div class="input-group mt-2">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text"><i class="fas fa-dollar-sign"></i></span>
                                    </div>
                                    <input type="number" step="any" maxlength="10" class="form-control" name="payment"
                                           data-toggle="tooltip" title="Pago recibido por el paquete adquirido" required />
                                </div>
                                <small class="form-text text-muted">Pago recibido por el paquete adquirido</small>
                            </div>
                        </div>
                        <div class="form-divider"></div>
                        <div class="form-group row">
                            <label for="example-lastname1-input" class="col-sm-3 col-form-label">Descripción</label>
                            <div class="col-sm-9">
                                <textarea class="form-control" rows="3" placeholder="Descripción"
                                          name="description" data-toggle="tooltip" title="Descripción del paquete"></textarea>
                                <small class="form-text text-muted">Descripción del paquete</small>
                            </div>
                        </div>
                        @*<div class="form-divider"></div>
                        <div class="form-group row">
                            <label for="example-name1-input" class="col-sm-3 col-form-label">Comunidad</label>
                            <div class="col-sm-9">
                                <input class="form-control" type="text" value="" name="community" required
                                       placeholder="Comunidad" id="example-name1-input"
                                       data-toggle="tooltip" title="Nombre de la comunidad" />
                                <small class="form-text text-muted">Nombre de la comunidad</small>
                            </div>
                        </div>
                        <div class="form-divider"></div>*@
                        @*<div class="form-group row">
                            <label for="example-name1-input" class="col-sm-3 col-form-label">Administrador</label>
                            <div class="col-sm-9">
                                <input class="form-control" type="email" value="" name="admin_email" required
                                       placeholder="Administrador" id="example-name1-input"
                                       data-toggle="tooltip" title="Email del administrador" />
                                <small class="form-text text-muted">Email del administrador</small>
                            </div>
                        </div>*@
                        @*<div class="form-divider"></div>
                        <div class="form-group row">
                            <label for="example-name1-input" class="col-sm-3 col-form-label">Suscribir enlace</label>
                            <div class="col-sm-9">
                                <input class="form-control" type="text" value="" name="suscribe_link" required
                                       placeholder="Suscribir enlace" id="example-name1-input"
                                       data-toggle="tooltip" title="Enlace de Suscripción"/>
                                <small class="form-text text-muted">Suscribir enlace</small>
                            </div>
                        </div>*@
                        @*<div class="form-divider"></div>*@
                        <a href=""><button type="submit" class="btn btn-primary waves-effect waves-light">Guardar</button></a>
                        <a href="javascript:history.back()"><button type="button" class="btn btn-danger waves-effect waves-light">Cancelar</button></a>
                    </div>
                    }
                </div>
            </div>
        </div><!-- end row -->
        <!-- back button -->
        <div class="row pb-4">
            <div class="col-md-6">
                <a href="javascript:history.back()"><button type="button" class="btn btn-light waves-effect waves-light"><i class="mdi mdi-keyboard-return"></i> Regresar</button></a>
            </div>
        </div>
        <!-- end back button -->

    </div><!-- container -->

</div> <!-- Page content Wrapper -->