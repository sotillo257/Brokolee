
@{
    ViewBag.Title = "agregar";
    Page.Title = "Agregar categoría - Brokolee Software";
}

<style media="screen">
    #inputGroupFile04 {
        max-width: 150px;
        margin: 0 auto;
        height: 130px;
    }


    .garritas {
        max-width: 150px;
        height: 130px;
        margin: 0 auto;
    }


</style>

<div class="page-content-wrapper">

    <div class="container-fluid">

        <div class="row">
            <div class="col-sm-12">
                <div class="page-title-box">
                    <div class="float-left">
                        <div class="breadcrumb float-md-right">
                            <h4 class="page-title">Agregar categoría</h4>
                        </div>
                    </div>
                    <div class="float-right">
                        <ul class="breadcrumb float-md-right">
                            <li class="breadcrumb-item"><a href="@Url.Action("panel", "control", new { area = "webmaster" })" class="text-success"><i class="mdi mdi-home-modern"></i> Panel de control</a></li>
                            <li class="breadcrumb-item"><a href="@Url.Action("listadoCategorias", "suplidores", new { area = "webmaster" })" class="text-success">Listado de categorías</a></li>
                            <li class="breadcrumb-item active">Agregar categoría</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        <!-- end page title end breadcrumb -->
        <!-- back button -->
        <div class="row pb-4">
            <div class="col-md-6">
                <a href="@Url.Action("listadoCategorias", "suplidores", new { area = "webmaster" })"><button type="button" class="btn btn-light waves-effect waves-light"><i class="mdi mdi-keyboard-return"></i> Regresar</button></a>
            </div>
        </div>
        <!-- end back button -->        
        <div class="row">

            <div class="col-12">
                <div class="card">
                    @using (Html.BeginForm("newCatg", "suplidores", FormMethod.Post,
                      new
                      {
                          id = "newcategoryForm",
                          @class = "",
                          area = "webmaster",
                          enctype = "multipart/form-data"
                      }))
                    {
                        @Html.AntiForgeryToken()
                        <div class="card-body">
                            <h5 class="d-inline-block">Nueva categoria</h5>
                            <div class="form-divider"></div>
                            <div class="form-group row">
                                <label for="example-email-input" class="col-sm-3 col-form-label">Nombre</label>
                                <div class="col-sm-9">
                                    <input maxlength="20" class="form-control" type="text" value="" name="name" required
                                           placeholder="Nombre" id="example-email-input"
                                           data-toggle="tooltip" title="Nombre de la categoria" />
                                    <small class="form-text text-muted">Nombre de la categoria</small>
                                </div>
                            </div>                            
                            <a href=""><button type="submit" class="btn btn-primary waves-effect waves-light">Guardar</button></a>
                            <a href="@Url.Action("listadoCategorias", "suplidores", new { area = "webmaster" })"><button type="button" class="btn btn-danger waves-effect waves-light">Cancelar</button></a>
                        </div>
                    }
                </div>
            </div>
        </div><!-- end row -->
        <!-- back button -->
        <div class="row pb-4">
            <div class="col-md-6">
                <a href="@Url.Action("listadoCategorias", "suplidores", new { area = "webmaster" })"><button type="button" class="btn btn-light waves-effect waves-light"><i class="mdi mdi-keyboard-return"></i> Regresar</button></a>
            </div>
        </div>
        <!-- end back button -->

    </div><!-- container -->

</div> <!-- Page content Wrapper -->

    <script type="text/javascript">       

        (function () {

            function filePreview(input) {
                if (input.files && input.files[0]) {

                    var reader = new FileReader();

                    reader.onload = function (e) {


                        $('#img-fluid').html("<img class='garritas' src='" + e.target.result + "'/>");

                    }

                    reader.readAsDataURL(input.files[0]);

                }

            }
        $('#inputGroupFile04').change(function () {

            filePreview(this);
    });

})();



</script>