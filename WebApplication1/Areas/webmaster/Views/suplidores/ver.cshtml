
@{
    ViewBag.Title = "ver";
    Page.Title = "Ver suplidor - Brokolee Software";
}

<div class="page-content-wrapper">

    <div class="container-fluid">

        <div class="row">
            <div class="col-sm-12">
                <div class="page-title-box">
                    <div class="float-left">
                        <div class="breadcrumb float-md-right">
                            <h4 class="page-title">Ver suplidor</h4>
                        </div>
                    </div>
                    <div class="float-right">
                        <ul class="breadcrumb float-md-right">
                            <li class="breadcrumb-item"><a href="@Url.Action("panel", "control", new { area = "webmaster" })" class="text-success"><i class="mdi mdi-home-modern"></i> Panel de control</a></li>
                            <li class="breadcrumb-item active">Ver suplidor</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        <!-- end page title end breadcrumb -->
        <!-- back button -->
        <div class="row pb-4">
            <div class="col-md-6">
                <a href="javascript:history.back()"><button type="button" class="btn btn-light waves-effect waves-light"><i class="mdi mdi-keyboard-return"></i> Regresar</button></a>
            </div>
        </div>
        <!-- end back button -->

        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <div class="row form-material">
                            <div class="col-md-6">
                                <h5 class="d-inline-block">@Model.viewSupplier.company - @Model.viewSupplier.contact_name | <input type="hidden" class="rating" data-filled="mdi mdi-star font-20 text-warning" data-empty="mdi mdi-star-outline font-20 text-warning" data-readonly value="@Model.viewSupplier.assessment" /></h5>
                            </div>
                            <div class="col-md-6 mb-1">
                                <a href="@Url.Action("editar", "suplidores", new { area = "webmaster", editID=Model.viewSupplier.id } )" class="mr-1"><button type="button" class="btn btn-success waves-effect waves-light float-xl-right float-lg-right float-md-left">Editar</button></a>
                                @*<a href="@Url.Action("agregar",  "suplidores", new { area = "webmaster" })"><button type="button" class="btn btn-primary waves-effect waves-light float-xl-right float-lg-right float-md-left">Agregar nuevo</button></a>*@
                            </div>
                        </div>
                        <div class="form-divider"></div>
                        <div class="row form-material">
                            <div class="col-sm-3">
                                @if (@Model.viewSupplier.logo != null)
                                {
                                    <img src="~/Upload/Supplier_Logo/@Model.viewSupplier.logo" alt="user-img" class="img-fluid" />
                                }
                                else
                                {
                                    <img src="~/assets/images/suplidores/logo-suplidor.jpg" alt="user-img" class="img-fluid" />
                                }
                            </div>
                            <div class="col-sm-9">
                                <div class="row form-material">
                                    <div class="col-md-4"><p><i class="mdi mdi-worker text-primary"></i> @Model.supplierCategory.name</p></div>
                                    <div class="col-md-4"><p><i class="mdi mdi-wrench text-primary"></i> @Model.viewSupplier.contact_name</p></div>
                                    <div class="col-md-4"><p><i class="mdi mdi-phone text-primary"></i> @Model.viewSupplier.phone</p></div>
                                </div>
                                <div class="row form-material">
                                    <div class="col-md-4"><p><i class="mdi mdi-email-outline text-primary"></i> @Model.viewSupplier.email</p></div>
                                    <div class="col-md-4"><p><i class="mdi mdi-calendar-check text-primary"></i> @Convert.ToDateTime(Model.viewSupplier.supplier_from).ToString("MM/dd/yyyy")</p></div>
                                    <div class="col-md-4"><p><i class="mdi mdi-web  text-primary"></i> <a href="#">@Model.viewSupplier.web_page</a> </p></div>
                                </div>
                                <div class="row form-material">
                                    <div class="col-md-11 mb-3"><textarea class="form-control" rows="3" placeholder="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat. Duis aute irure dolor in reprehenderit in voluptate velit esse cillum dolore eu fugiat nulla pariatur. ">@Model.viewSupplier.description</textarea></div>
                                </div>
                            </div>
                        </div>
                        <div class="form-divider"></div>
                        <div class="row form-material">
                            <div class="col-md-6">
                                <h5 class="d-inline-block">Comentarios</h5>
                            </div>
                            <div class="col-md-6 mb-1">

                            </div>
                        </div>
                        <div class="table-responsive">
                            <table id="dataTable-directorio-suplidores" class="table table-striped table-bordered normal" style="border-collapse: collapse; border-spacing: 0; width: 100%;">
                                <thead>
                                    <tr>
                                        <th class="f-b">Titular</th>
                                        <th class="text-center f-b">Comentario</th>
                                        <th class="text-center f-b">Valoración</th>
                                        <th class="text-center f-b">Eliminar</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var comment in Model.commentList)
                                    {
                                        <tr>
                                            <td>@comment.user_name</td>
                                            <td>"@comment.commentary."</td>
                                            <td class="text-center">
                                                @if (comment.assessment == 1)
                                                {
                                                    <i class="mdi mdi-star text-warning"></i><i class="mdi mdi-star text-warning"></i>
                                                }
                                                else if (comment.assessment == 2)
                                                {
                                                    <i class="mdi mdi-star text-warning"></i><i class="mdi mdi-star text-warning"></i>
                                                    <i class="mdi mdi-star text-warning"></i><i class="mdi mdi-star text-warning"></i>
                                                }
                                                else if (comment.assessment == 3)
                                                {
                                                    <i class="mdi mdi-star text-warning"></i><i class="mdi mdi-star text-warning"></i>
                                                    <i class="mdi mdi-star text-warning"></i><i class="mdi mdi-star text-warning"></i>
                                                    <i class="mdi mdi-star text-warning"></i><i class="mdi mdi-star text-warning"></i>
                                                }
                                                else if (comment.assessment == 4)
                                                {
                                                    <i class="mdi mdi-star text-warning"></i><i class="mdi mdi-star text-warning"></i>
                                                    <i class="mdi mdi-star text-warning"></i><i class="mdi mdi-star text-warning"></i>
                                                    <i class="mdi mdi-star text-warning"></i><i class="mdi mdi-star text-warning"></i>
                                                    <i class="mdi mdi-star text-warning"></i><i class="mdi mdi-star text-warning"></i>
                                                }
                                                else if (comment.assessment == 5)
                                                {
                                                    <i class="mdi mdi-star text-warning"></i><i class="mdi mdi-star text-warning"></i>
                                                    <i class="mdi mdi-star text-warning"></i><i class="mdi mdi-star text-warning"></i>
                                                    <i class="mdi mdi-star text-warning"></i><i class="mdi mdi-star text-warning"></i>
                                                    <i class="mdi mdi-star text-warning"></i><i class="mdi mdi-star text-warning"></i>
                                                    <i class="mdi mdi-star text-warning"></i><i class="mdi mdi-star text-warning"></i>
                                                }
                                                else
                                                {
                                                    <i class="mdi mdi-star text-warning"></i><i class="mdi mdi-star text-warning"></i>
                                                }
                                            </td>
                                            <td class="text-center">
                                                <a href="#">
                                                    <button type="button" onclick="onDeleteComment(this)" data-id="@comment.id"
                                                            class="btn btn-danger waves-effect waves-light btn-sm"
                                                            data-toggle="tooltip" data-placement="top" title="Eliminar">
                                                    <i class="mdi mdi-delete"></i></button>
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>

                    </div>
                </div>
            </div>
        </div><!-- end row -->
        <!-- back button -->
        <div class="row pb-4">
            <div class="col-md-6">
                <a href="javascript:history.back()"><button type="button" class="btn btn-light waves-effect waves-light"><i class="mdi mdi-keyboard-return"></i> Regresar</button></a>
            </div>
        </div>
        <!-- end back button -->

    </div><!-- container -->

</div> <!-- Page content Wrapper -->
