                            <div class="timeline">
                                <span class="timeline-icon"></span>
                                <span class="year">10 de Diciembre de 2018</span>
                                <div class="timeline-content">
                                    <h5 class="title">Daniel González</h5>
                                    <span class="post text-right"><i class="mdi mdi-clock"></i> 04:30 pm</span>
                                    <p class="description">
                                        Lorem ipsum dolor sit amet, consectetur adipiscing elit. Vivamus mattis justo id pulvinar suscipit.
                                    </p>
                                    <img src="assets/images/small/img-4.jpg" alt="" class="img-fluid">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div><!-- end row -->
        <!-- back button -->
        <div class="row pb-4">
            <div class="col-md-6">
                <a href="javascript:history.back()"><button type="button" class="btn btn-light waves-effect waves-light"><i class="mdi mdi-keyboard-return"></i> Regresar</button></a>
            </div>
        </div>
        <!-- end back button -->

    </div><!-- container -->

</div> <!-- Page content Wrapper -->