
@{
    ViewBag.Title = "listado";
    Page.Title = "Documentos Legales de la Comunidad - Brokolee Software";
}

<div class="page-content-wrapper">

    <div class="container-fluid">

        <div class="row">
            <div class="col-sm-12">
                <div class="page-title-box">
                    <div class="float-left">
                        <div class="breadcrumb float-md-right">
                            <h4 class="page-title">Documentos Legales de la Comunidad</h4>
                        </div>
                    </div>
                    <div class="float-right">
                        <ul class="breadcrumb float-md-right">
                            <li class="breadcrumb-item"><a href="@Url.Action("panel", "control", new { area = "webmaster" })" class="text-success"><i class="mdi mdi-home-modern"></i> Panel de Control</a></li>
                            <li class="breadcrumb-item active">Documentos Legales de la Comunidad</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        <!-- end page title end breadcrumb -->
        <div class="row">
            <div class="col-lg-12">
                <div class="card m-b-30">
                    <div class="card-body">
                        <div class="input-group">
                            @using (Html.BeginForm("SeacrhResult", "documentos", FormMethod.Post, new
                            {
                                id = "searchForm",
                                @class = "search-form",
                                area = "webmaster",
                                enctype = "multipart/form-data"
                            }))
                            {
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="id" value="@Model.typeID" />
                                <input type="text" id="example-input1-group2" name="searchStr" value="@Model.searchStr" 
                                       class="form-control" placeholder="Buscar documento...">
                                <span class="input-group-append">
                                    <button type="submit" class="btn btn-effect-ripple btn-primary"><i class="fas fa-search"></i> Buscar </button>
                                </span>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div><!--end row-->
        <!-- back button -->
        <div class="row pb-4">
            <div class="col-md-6">
                <a href="javascript:history.back()"><button type="button" class="btn btn-light waves-effect waves-light"><i class="mdi mdi-keyboard-return"></i> Regresar</button></a>
            </div>
        </div>
        <!-- end back button -->

        <div class="row">
            <div class="col-12">
                <div class="card m-b-30">
                    <div class="card-body">
                        <div class="row form-material">
                            <div class="col-md-6">
                                <h5 class="d-inline-block">Listado de Documentos</h5>
                            </div>
                            <div class="col-md-6 mb-1">
                                <a href="@Url.Action("agregar", "documentos")"><button type="button" class="btn btn-primary waves-effect waves-light float-xl-right float-lg-right float-md-left">Agregar nuevo</button></a>
                            </div>
                        </div>
                        <div class="table-responsive">
                            <table id="dataTable-directorio-suplidores" class="table table-striped table-bordered normal" style="border-collapse: collapse; border-spacing: 0; width: 100%;">
                                <thead>
                                    <tr>
                                        <th>Nombre</th>
                                        <th>Descargar</th>
                                        <th>Subido por</th>
                                        <th>Fecha</th>
                                        <th>Compartir / Privado</th>
                                        <th class="text-center">Opciones</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.document_list)
                                    {
                                    <tr>
                                        <td>@item.first_name</td>
                                        <td class="text-center">
                                            @if (item.upload_document != null)
                                            {
                                                <a href="~/Upload/Upload_Document/@item.upload_document">
                                                    <button type="button" class="btn btn-info waves-effect waves-light btn-sm"
                                                            data-toggle="tooltip" data-placement="top" title="Descargar">
                                                        <i class="mdi mdi-cloud-download"></i>
                                                    </button>
                                                </a>
                                            }
                                            else
                                            {
                                                <a href="">
                                                    <button type="button" class="btn btn-info waves-effect waves-light btn-sm"
                                                            data-toggle="tooltip" data-placement="top" title="Descargar">
                                                        <i class="mdi mdi-cloud-download"></i>
                                                    </button>
                                                </a>
                                            }
                                        </td>
                                        <td>@item.uploaded_by</td>
                                        @if (item.uploaded_date != null)
                                        {
                                            <td class="text-center">@Convert.ToDateTime(item.uploaded_date).ToString("MM/dd/yyyy")</td>
                                        }
                                        else
                                        {
                                            <td class="text-center"></td>
                                        }
                                        <td class="text-center">
                                            @if (item.share == 1)
                                            {
                                                <button type="button" class="btn btn-info waves-effect waves-light btn-sm mr-1 mb-1">General</button>
                                            }
                                            else
                                            {
                                                <button type="button" class="btn btn-warning waves-effect waves-light btn-sm mb-1">Administradores</button>
                                            }

                                        </td>
                                        <td class="text-center"><a href="@Url.Action("editar", "documentos", new { area = "webmaster", editID = item.id })"><button type="button" class="btn btn-primary waves-effect waves-light btn-sm mr-1 mb-1" data-toggle="tooltip" data-placement="top" title="Editar"><i class="mdi mdi-lead-pencil"></i></button></a><a href="#"><button type="button" onclick="onDeleteDocument(this)" data-id="@item.id" class="btn btn-danger waves-effect waves-light btn-sm mb-1" data-toggle="tooltip" data-placement="top" title="Eliminar"><i class="mdi mdi-delete"></i></button></a></td>
                                    </tr>
                                    }
                                </tbody>
                            </table>
                        </div>

                    </div>
                </div>
            </div>
        </div><!-- end row -->
        <!-- back button -->
        <div class="row pb-4">
            <div class="col-md-6">
                <a href="javascript:history.back()"><button type="button" class="btn btn-light waves-effect waves-light"><i class="mdi mdi-keyboard-return"></i> Regresar</button></a>
            </div>
        </div>
        <!-- end back button -->

    </div><!-- container -->

</div> <!-- Page content Wrapper -->
