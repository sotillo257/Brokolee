                        </div>
                        <div class="form-divider"></div>*@
                        <div class="form-group row">
                            <label class="col-sm-3 col-form-label">Paquete</label>
                            <div class="col-sm-9">
                                <input class="form-control" type="text" value="@Model.package_name"
                                       data-toggle="tooltip" title="Paquete adquirido" readonly
                                       placeholder="Paquete 1" id="example-name1-input">
                                @*<small class="form-text text-muted">Paquete adquirido</small>*@
                            </div>
                        </div>
                        <div class="form-divider"></div>
                        <div class="form-group row">
                            <label for="example-lastname1-input" class="col-sm-3 col-form-label">Dirección</label>
                            <div class="col-sm-9">
                                <input class="form-control" value="@Model.viewCommunity.apart"
                                       data-toggle="tooltip" title="Dirección" readonly
                                       placeholder="Dirección" />
                                @*<small class="form-text text-muted">Dirección</small>*@
                            </div>
                        </div>
                        <div class="form-divider"></div>
                        <div class="form-group row">
                            <label for="example-lastname1-input" class="col-sm-3 col-form-label">Descripción</label>
                            <div class="col-sm-9">
                                <textarea class="form-control" rows="3" readonly
                                          data-toggle="tooltip" title="Descripción de la comunidad"
                                          placeholder="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.">@Model.viewCommunity.description</textarea>
                                @*<small class="form-text text-muted">Descripción de la comunidad</small>*@
