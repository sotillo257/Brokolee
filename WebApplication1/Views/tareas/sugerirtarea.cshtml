
@{
    ViewBag.Title = "sugerirtarea";
    Page.Title = "Sugerir tarea - Brokolee Software";
}


<meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=0, minimal-ui">
<script src="~/Scripts/jquery-3.1.1.min.js"></script>


<link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">

<script src="https://code.jquery.com/jquery-1.12.4.js"></script>
<script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>


<div class="page-content-wrapper">

    <div class="container-fluid">

        <div class="row">
            <div class="col-sm-12">
                <div class="page-title-box">
                    <div class="float-left">
                        <div class="breadcrumb float-md-right">
                            <h4 class="page-title">Sugerir Tarea</h4>
                        </div>
                    </div>
                    <div class="float-right">
                        <ul class="breadcrumb float-md-right">
                            <li class="breadcrumb-item"><a href="@Url.Action("community", "control")" class="text-success"><i class="mdi mdi-home-modern"></i> Panel de control</a></li>
                            <li class="breadcrumb-item"><a href="@Url.Action("listado", "tareas")" class="text-success"> Tareas</a></li>
                            <li class="breadcrumb-item active">Sugerir tarea</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        <!-- end page title end breadcrumb -->
        <!-- back button -->
        <div class="row pb-4">
            <div class="col-md-6">
                <a href="@Url.Action("listado", "tareas")"><button type="button" class="btn btn-light waves-effect waves-light"><i class="mdi mdi-keyboard-return"></i> Regresar</button></a>
            </div>
        </div>
        <!-- end back button -->


        <div class="row">

            <div class="col-12">
                <div class="card">
                    @using (Html.BeginForm("newtask", "tareas", FormMethod.Post, new { id = "newtaskForm", @class = "" }))
                    {
                        @Html.AntiForgeryToken()
                        <div class="card-body">
                            <h5 class="d-inline-block">Nueva tarea</h5>
                            <div class="form-divider"></div>
                            <div class="form-group row">
                                <label for="example-email-input" class="col-sm-3 col-form-label">Nombre</label>
                                <div class="col-sm-9">
                                    <input maxlength="20" class="form-control" type="text" value="" name="task_name" required
                                           data-toggle="tooltip" title="Nombre del la tarea"
                                           placeholder="Nombre" id="example-email-input">
                                    <small class="form-text text-muted">Nombre de la tarea</small>
                                </div>
                            </div>
                            <div class="form-divider"></div>
                            <div class="form-group row">
                                <label for="example-lastname1-input" class="col-sm-3 col-form-label">Descripción</label>
                                <div class="col-sm-9">
                                    <textarea required maxlength="90" class="form-control" rows="3" name="description"
                                              data-toggle="tooltip" title="Descripción de la tarea"
                                              placeholder="Descripción"></textarea>
                                    <small class="form-text text-muted">Descripción de la tarea</small>
                                </div>
                            </div>
                            <div class="form-divider"></div>
                            <div class="form-group row">
                                <label for="example-lastname1-input" class="col-sm-3 col-form-label">Responsable</label>
                                <div class="col-sm-9">
                                    <input maxlength="20" class="form-control" type="text" value="" required
                                           data-toggle="tooltip" title="Nombre de la persona responsable"
                                           name="responsable" placeholder="Responsable" id="example-lastname1-input">
                                    <small class="form-text text-muted">Nombre de la persona responsable</small>
                                </div>
                            </div>
                            <div class="form-divider"></div>
                            <div class="form-group row">
                                <label for="example-date-input" class="col-sm-3 col-form-label">Fecha</label>
                                <div class="col-sm-9">
                                    <input autocomplete="off" class="form-control" type="date" required
                                           data-toggle="tooltip" title="Mes / día / año | Fecha de registro de la tarea"
                                           value="" name="task_date" id="example-date-input">
                                    <small class="form-text text-muted">Mes / día / año | Fecha de registro de la tarea</small>
                                </div>
                            </div>
                            <div class="form-divider"></div>
                            <div class="form-group row">
                                <label for="example-time-input" class="col-sm-3 col-form-label">Hora</label>
                                <div class="col-sm-9">
                                    <input autocomplete="off" class="form-control" type="time" required
                                           data-toggle="tooltip" title="Hora de registro de la tarea"
                                           value="" name="task_time" id="example-time-input">
                                    <small class="form-text text-muted">Hora de registro de la tarea</small>
                                </div>
                            </div>
                            <div class="form-divider"></div>
                            <h6 class="mt-0 header-title">Estimado de tiempo</h6>
                            <div class="form-group row">
                                <label for="example-date-input" class="col-sm-3 col-form-label">Fecha</label>
                                <div class="col-sm-9">
                                    <input autocomplete="off" class="form-control" type="date" required
                                           data-toggle="tooltip" title="Mes / día / año | Fecha de registro de la tarea"
                                           name="estimated_date" value="" id="example-date-input-PA">
                                    <small class="form-text text-muted">Mes / día / año | Fecha de registro de la tarea</small>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="example-time-input" class="col-sm-3 col-form-label">Hora</label>
                                <div class="col-sm-9">
                                    <input autocomplete="off" class="form-control" type="time" required
                                           data-toggle="tooltip" title="Hora de registro de la tarea"
                                           name="estimated_time" value="" id="example-time-input">
                                    <small class="form-text text-muted">Hora de registro de la tarea</small>
                                </div>
                            </div>
                            <div class="form-divider"></div>
                            <div class="form-group row">
                                <label for="example-lastname1-input" class="col-sm-3 col-form-label">Comentarios</label>
                                <div class="col-sm-9">
                                    <textarea required class="form-control" rows="3" name="comments"
                                              data-toggle="tooltip" title="Comentarios del administrador"
                                              placeholder="Comentarios"></textarea>
                                    <small class="form-text text-muted">Comentarios del administrador</small>
                                </div>
                            </div>                                                        
                            <div class="form-divider"></div>
                            <a href=""><button type="submit" class="btn btn-primary waves-effect waves-light">Guardar</button></a>
                            <a href="@Url.Action("listado", "tareas")"><button type="button" class="btn btn-danger waves-effect waves-light">Cancelar</button></a>
                        </div>
                    }
                </div>
            </div>
        </div><!-- end row -->
        <!-- back button -->
        <div class="row pb-4">
            <div class="col-md-6">
                <a href="@Url.Action("listado", "tareas")"><button type="button" class="btn btn-light waves-effect waves-light"><i class="mdi mdi-keyboard-return"></i> Regresar</button></a>
            </div>
        </div>
        <!-- end back button -->

    </div><!-- container -->

</div> <!-- Page content Wrapper -->

