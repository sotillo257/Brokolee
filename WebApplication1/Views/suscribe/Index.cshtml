
@{
    Layout = "~/Views/Shared/_Layout_Suscribe.cshtml";
    ViewBag.Title = "Index";
    Page.Title = "Suscribirse Iniciar sesión";
}

<div class="wrapper-page">
    <div class="card">
        <div class="card-body">
            <h3 class="text-center mt-0">
                Iniciar
            </h3>

            <form method="post" action="@Url.Action("SubmitLogin", "suscribe")">
                @if (Model.WarningMsg != "")
                {
                    <div class="alert alert-danger">
                        <strong>Login Failed</strong> @Model.WarningMsg.
                    </div>
                }



                <div class="form-group row">
                    <div class="col-12">
                        <input type="email" id="inputEmail" class="form-control" name="Email" value="@Model.Email" placeholder="Email" required autofocus />
                        @*<label for="inputEmail">Email address</label>*@
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-12">
                        <input type="password" id="inputPassword" class="form-control" name="Password" value="@Model.Password" placeholder="Contraseña" required />
                        @*<label for="inputPassword">Password</label>*@
                    </div>
                </div>

                <input type="hidden" name="PackageId" value="@Model.PackageId" />
                <div class="form-group text-center row m-t-20">
                    <div class="col-12">
                        <button class="btn btn-lg btn-primary btn-block text-uppercase" type="submit">Ingresar</button>
                       </div>
                    </div>
                        <div class="text-center">
                            <a href="@Url.Action("Register", "suscribe", new { packageId = Model.PackageId })">Registrarse</a>
                        </div>
            </form>
        </div>
    </div>
</div>