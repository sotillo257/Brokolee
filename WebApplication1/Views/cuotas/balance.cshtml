
@{
    ViewBag.Title = "balance";
    Page.Title = "Balance Pendiente - Brokolee Software";
}

<div class="page-content-wrapper">

    <div class="container-fluid">

        <div class="row">
            <div class="col-sm-12">
                <div class="page-title-box">
                    <div class="float-left">
                        <div class="breadcrumb float-md-right">
                            <h4 class="page-title">Balance Pendiente</h4>
                        </div>
                    </div>
                    <div class="float-right">
                        <ul class="breadcrumb float-md-right">
                            <li class="breadcrumb-item"><a href="@Url.Action("panel", "control")" class="text-success"><i class="mdi mdi-home-modern"></i> Panel de Control</a></li>
                            <li class="breadcrumb-item active">Balance Pendiente</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        <!-- end page title end breadcrumb -->
        <!-- back button -->
        <div class="row pb-4">
            <div class="col-md-6">
                <a href="javascript:history.back()"><button type="button" class="btn btn-light waves-effect waves-light"><i class="mdi mdi-keyboard-return"></i> Regresar</button></a>
            </div>
        </div>
        <!-- end back button -->
        @foreach (var item in Model.feeList)
        {
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        @using (Html.BeginForm("MakePayment", "cuotas", FormMethod.Post, new
                        { 
                            @class = "search-form",
                            enctype = "multipart/form-data"
                        }))
                        {
                            @Html.AntiForgeryToken()
                            <input name="cost" value="@item.cost" type="hidden" />
                            <input name="taxCharge" value="@item.tax_charge" type="hidden" />
                            <input name="penalty" value="@item.penalty" type="hidden" />
                            <div class="card-body">
                                <h5 class="d-inline-block">Balance</h5>
                                <div class="form-divider"></div>
                                <div class="form-group row">
                                    <label class="col-form-label col-sm-12">Usted tiene un balance pendiente de: <strong>$@string.Format("{0:0.##}", item.cost)</strong></label>
                                </div>
                                <div class="form-divider"></div>
                                <div class="form-group row">
                                    <label class="col-form-label col-sm-12">Cargo impuesto: <strong>$@string.Format("{0:0.##}", item.tax_charge)</strong></label>
                                </div>
                                <div class="form-divider"></div>
                                <div class="form-group row">
                                    <label class="col-form-label col-sm-12">Penalidad: <strong>$@string.Format("{0:0.##}", item.penalty)</strong></label>
                                </div>
                                <button type="submit" class="btn btn-primary waves-effect waves-light">Realizar Pago</button>
                            </div>
                        }
                    </div>
                </div>
            </div><!-- end row -->
        }

        <!-- back button -->
        <div class="row pb-4">
            <div class="col-md-6">
                <a href="javascript:history.back()"><button type="button" class="btn btn-light waves-effect waves-light"><i class="mdi mdi-keyboard-return"></i> Regresar</button></a>
            </div>
        </div>
        <!-- end back button -->

    </div><!-- container -->

</div> <!-- Page content Wrapper -->