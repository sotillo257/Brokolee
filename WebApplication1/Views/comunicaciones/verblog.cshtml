
@{
    ViewBag.Title = "verblog";
    Page.Title = "Ver blog - Brokolee Software";
}

<div class="page-content-wrapper">
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-12">
                <div class="page-title-box">
                    <div class="float-left">
                        <div class="breadcrumb float-md-right">
                            <h4 class="page-title">Ver blog</h4>
                        </div>
                    </div>

                    <div class="float-right">
                        <ul class="breadcrumb float-md-right">
                            <li class="breadcrumb-item"><a href="@Url.Action("panel", "control")" class="text-success"><i class="mdi mdi-home-modern"></i> Panel de control</a></li>
                            <li class="breadcrumb-item active">Ver blog</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>

        <!-- end page title end breadcrumb -->
        <!-- back button -->
        <div class="row pb-4">
            <div class="col-md-6">
                <a href="javascript:history.back()"><button type="button" class="btn btn-light waves-effect waves-light"><i class="mdi mdi-keyboard-return"></i> Regresar</button></a>
            </div>
        </div>
        <!-- end back button -->
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <div class="row form-material">
                            <div class="col-md-6 mb-1">
                                <h5 class="d-inline-block">
                                    @Model.viewBlog.title
                                </h5>
                            </div>
                            <div class="col-md-6">

                            </div>
                        </div>
                        <div class="form-divider"></div>
                        <div class="row form-material">
                            <div class="col-md-6 mb-1">
                                <p><i class="mdi mdi-worker text-primary"></i>@Model.viewBlog.author</p>
                            </div>
                            <div class="col-md-6">
                                <p><i class="mdi mdi-clock text-primary"></i>@Convert.ToDateTime(Model.viewBlog.blogdate).ToString("yyyy-MM-dd HH:mm")</p>
                            </div>
                            <div class="col-md-11 mb-3">
                                <textarea class="form-control" rows="3" readonly>@Model.viewBlog.content</textarea>
                            </div>
                        </div>
                        <div class="form-divider"></div>
                        <div class="row form-material">
                            <div class="col-md-6">
                                <h5 class="d-inline-block">Blog Comentarios</h5>
                            </div>
                            <div class="col-md-6 mb-1">
                                <a href="@Url.Action("agregarcomentario", "comunicaciones", new { blogID = Model.blogID })">
                                    <button type="button" class="btn btn-primary waves-effect waves-light float-xl-right float-lg-right float-md-left">Agregar Comentario</button>
                                </a>
                            </div>
                        </div>
                        <div class="table-responsive">
                            <table id="dataTable-documentos-legales"
                                   class="table table-striped table-bordered normal"
                                   style="border-collapse: collapse; border-spacing: 0; width: 100%;">
                                <thead>
                                    <tr>
                                        <th>Nombre</th>
                                        <th>Comentario</th>
                                        <th>Fecha de publicación</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.blogcommentList)
                                    {
                                        <tr>
                                            <td>@item.name</td>
                                            <td>@item.comment.</td>
                                            <td class="text-center">@Convert.ToDateTime(item.postdate).ToString("MM/dd/yyyy HH:mm")</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- back button -->
        <div class="row pb-4">
            <div class="col-md-6">
                <a href="javascript:history.back()"><button type="button" class="btn btn-light waves-effect waves-light"><i class="mdi mdi-keyboard-return"></i> Regresar</button></a>
            </div>
        </div>
    </div>
</div>