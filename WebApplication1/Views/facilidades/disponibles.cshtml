
@{
    ViewBag.Title = "disponibles";
    Page.Title = "Facilidades disponibles - Brokolee Software";
}

<div class="page-content-wrapper">

    <div class="container-fluid">

        <div class="row">
            <div class="col-sm-12">
                <div class="page-title-box">
                    <div class="float-left">
                        <div class="breadcrumb float-md-right">
                            <h4 class="page-title">Facilidades disponibles</h4>
                        </div>
                    </div>
                    <div class="float-right">
                        <ul class="breadcrumb float-md-right">
                            <li class="breadcrumb-item"><a href="@Url.Action("panel", "control")" class="text-success"><i class="mdi mdi-home-modern"></i> Panel de control</a></li>
                            <li class="breadcrumb-item active">Facilidades</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        <!-- end page title end breadcrumb -->
        <div class="row">
            <div class="col-lg-12">
                <div class="card m-b-30">
                    <div class="card-body">
                        <div class="input-group">
                            <input type="text" id="search-input" name="example-input1-group2" class="form-control" placeholder="Buscar facilidades...">
                            <span class="input-group-append">
                                <button type="button" id="search-button" class="btn btn-effect-ripple btn-primary"><i class="fas fa-search"></i> Buscar </button>
                            </span>
                        </div>
                    </div>
                </div>
            </div>
        </div><!--end row-->
        <!-- back button -->
        <div class="row pb-4">
            <div class="col-md-6">
                <a href="@Url.Action("panel", "control")"><button type="button" class="btn btn-light waves-effect waves-light"><i class="mdi mdi-keyboard-return"></i> Regresar</button></a>
            </div>
        </div>
        <!-- end back button -->

        <div class="row">
            <div class="col-12">
                <div class="card m-b-30">
                    <div class="card-body">
                        <div class="table-responsive">
                            <table id="dataTable-directorio-suplidores" class="table table-striped table-bordered normal" style="border-collapse: collapse; border-spacing: 0; width: 100%;">
                                <thead class="header-table">
                                    <tr>
                                        <th class="f-b">Nombre</th>
                                        <th class="f-b">Descripción</th>
                                        <th class="f-b">Hora inicio</th>
                                        <th class="f-b">Hora fin</th>
                                        @*<th class="f-b">Intervalo</th>*@
                                        <th class="f-b">Reglamento</th>
                                        <th class="f-b">Reservar</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.facilitieList)
                                    {
                                        <tr>
                                            <td>@item.first_name</td>
                                            <td>@item.description</td>
                                            <td class="text-center">@DateTime.Today.Add(item.start_time).ToString("hh:mm tt")</td>
                                            <td class="text-center">@DateTime.Today.Add(item.end_time).ToString("hh:mm tt")</td>
                                            @*<td class="text-center">@item.interval horas</td>*@
                                            <td class="text-center">
                                                @if (item.upload_regulation != null)
                                                {
                                                    <a href="~/Upload/Regulation/@item.upload_regulation" download="">
                                                        <button type="button" class="btn btn-info waves-effect waves-light btn-sm"
                                                                data-toggle="tooltip" data-placement="top" title="Descargar">
                                                            <i class="mdi mdi-cloud-download"></i>
                                                        </button>
                                                    </a>
                                                }
                                                else
                                                {
                                                    <a href="">
                                                        <button type="button" class="btn btn-info waves-effect waves-light btn-sm"
                                                                data-toggle="tooltip" data-placement="top" title="Descargar">
                                                            <i class="mdi mdi-cloud-download"></i>
                                                        </button>
                                                    </a>
                                                }
                                            </td>
                                            <td class="text-center"><a href="@Url.Action("reservar","facilidades", new { id=item.id })"><button type="button" class="btn btn-success waves-effect waves-light btn-sm mr-1 mb-1" data-toggle="tooltip" data-placement="top" title="Reservar"><i class="mdi mdi-plus-circle"></i></button></a></td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div><!-- end row -->
        <!-- back button -->
        <div class="row pb-4">
            <div class="col-md-6">
                <a href="@Url.Action("panel", "control")"><button type="button" class="btn btn-light waves-effect waves-light"><i class="mdi mdi-keyboard-return"></i> Regresar</button></a>
            </div>
        </div>
        <!-- end back button -->

    </div><!-- container -->

</div> <!-- Page content Wrapper -->