
@{
    Layout = "~/Views/Shared/_Layout_Login.cshtml";
    ViewBag.Title = "Log in";
    Page.Title = "Ingresar - Brokolee Software";
}

<div class="wrapper-page">

    <div class="card">
        <div class="card-body">

            <h3 class="text-center mt-0">
                <a href="@Url.Action("panel", "control")" class="logo logo-admin"><img src="~/assets/images/logo.png" height="100" alt="logo"></a>
            </h3>

            <h6 class="text-center">Recuperar contraseña</h6>

            <div class="p-3">
                <form class="form-horizontal" action="@Url.Action("panel", "control")">

                    <div class="alert alert-primary alert-dismissible">
                        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                        Ingresa tu <b>Email</b> y sigue las instrucciones que se enviarán!
                    </div>

                    <div class="form-group">
                        <div class="col-xs-12">
                            <input class="form-control" type="email" required="" placeholder="Email">
                        </div>
                    </div>

                    <div class="form-group text-center row m-t-20">
                        <div class="col-12">
                            <button class="btn btn-primary btn-block waves-effect waves-light" type="submit">Enviar Email</button>
                        </div>
                    </div>

                </form>
            </div>

        </div>
    </div>
</div>