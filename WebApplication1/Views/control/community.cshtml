
@{
    ViewBag.Title = "community";
    Page.Title = "Comunidad de control - Brokolee Software";
}

<div class="page-content-wrapper">

    <div class="container-fluid">

        <div class="row">
            <div class="col-sm-12">
                <div class="page-title-box">
                    <div class="float-left">
                        <div class="breadcrumb float-md-right">
                            <h4 class="page-title"> Comunidad de control</h4>
                        </div>
                    </div>
                    <div class="float-right">
                        <ul class="breadcrumb float-md-right">
                            <li class="breadcrumb-item"><a href="@Url.Action("panel", "control")" class="text-success"><i class="mdi mdi-home-modern"></i> Comunidad de control</a></li>
                            <li class="breadcrumb-item active">Comunidad de control</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        <!-- end page title end breadcrumb -->
        <div class="row">
            <div class="col-lg-12">
                <div class="card m-b-30">
                    <div class="card-body">
                        <div class="input-group">
                            <input type="text" id="search-input" name="example-input1-group2" class="form-control" placeholder="Buscar facilidades...">
                            <span class="input-group-append">
                                <button type="button" id="search-button" class="btn btn-effect-ripple btn-primary"><i class="fas fa-search"></i> Buscar </button>
                            </span>
                        </div>
                    </div>
                </div>
            </div>
        </div><!--end row-->
        <!-- back button -->
        <div class="row pb-4">
            <div class="col-md-6">
                <a href="javascript:history.back()"><button type="button" class="btn btn-light waves-effect waves-light"><i class="mdi mdi-keyboard-return"></i> Regresar</button></a>
            </div>
        </div>
        <!-- end back button -->

        <div class="row">
            @if (ViewBag.msgError != null)
            {
                <div class="col-12">
                    <div class="alert alert-danger" role="alert">
                        <strong>Error: </strong> @ViewBag.msgError
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                </div>
            }
            <div class="col-12">
                <div class="card m-b-30">
                    <div class="card-body">
                        <div class="row form-material">
                            <div class="col-md-6">
                                <h5 class="d-inline-block">Listado de comunidades administradas</h5>
                            </div>
                            <div class="col-md-6 mb-1">

                            </div>
                        </div>
                        <div class="table-responsive">
                            <table id="dataTable-directorio-suplidores" class="table table-striped table-bordered normal" style="border-collapse: collapse; border-spacing: 0; width: 100%;">
                                <thead>
                                    <tr>
                                        <th class="f-b">Comunidad</th>
                                        <th class="f-b">Descripción</th>
                                        <th class="text-center f-b">Opciones</th>
                                        <th class="f-b"></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.communityList)
                                    {
                                    <tr>
                                        <td>@item.first_name</td>
                                        <td>@item.description</td>
                                        <td class="text-center">
                                            <a href="@Url.Action("listadoTitulos", "control", new { Id = item.id })"
                                               class="btn btn-primary waves-effect waves-light btn-sm mr-1 mb-1"
                                               data-toggle="tooltip" data-placement="top" title="Comunidades">
                                                <i class="mdi mdi-home"></i>
                                            </a>                                           
                                        </td>
                                        <td>
                                            @if (Model.communityID1 == item.id)
                                            {
                                                <input class="form-control" type="checkbox" value="@item.id" checked />
                                            }
                                            else
                                            {
                                                <input class="form-control" type="checkbox" value="@item.id" />
                                            }
                                        </td>

                                    </tr>
                                    }
                                </tbody>
                            </table>
                        </div>

                    </div>
                </div>
            </div>
        </div><!-- end row -->
