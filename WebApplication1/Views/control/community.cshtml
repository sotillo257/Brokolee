
@{
    ViewBag.Title = "community";
    Page.Title = "Comunidad de control - Brokolee Software";
}

<div class="page-content-wrapper">

    <div class="container-fluid">

        <div class="row">
            <div class="col-sm-12">
                <div class="page-title-box">
                    <div class="float-left">
                        <div class="breadcrumb float-md-right">
                            <h4 class="page-title"> Comunidad de control</h4>
                        </div>
                    </div>
                    <div class="float-right">
                        <ul class="breadcrumb float-md-right">
                            <li class="breadcrumb-item"><a href="@Url.Action("panel", "control")" class="text-success"><i class="mdi mdi-home-modern"></i> Comunidad de control</a></li>
                            <li class="breadcrumb-item active">Comunidad de control</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        <!-- end page title end breadcrumb -->
        <div class="row">
            <div class="col-lg-12">
                <div class="card m-b-30">
                    <div class="card-body">
                        <div class="input-group">
                            <input type="text" id="search-input" name="example-input1-group2" class="form-control" placeholder="Buscar facilidades...">
                            <span class="input-group-append">
                                <button type="button" id="search-button" class="btn btn-effect-ripple btn-primary"><i class="fas fa-search"></i> Buscar </button>
                            </span>
                        </div>
                    </div>
                </div>
            </div>
        </div><!--end row-->
        <!-- back button -->
        <div class="row pb-4">
            <div class="col-md-6">
                <a href="javascript:history.back()"><button type="button" class="btn btn-light waves-effect waves-light"><i class="mdi mdi-keyboard-return"></i> Regresar</button></a>
            </div>
        </div>
        <!-- end back button -->

        <div class="row">
            <div class="col-12">
                <div class="card m-b-30">
                    <div class="card-body">
                        <div class="table-responsive">
                            <table id="dataTable-directorio-suplidores" class="table table-striped table-bordered normal" 
                                   style="border-collapse: collapse; border-spacing: 0; width: 100%;">
                                <thead class="header-table">
                                    <tr>
                                        <th class="f-b">Nombre</th>
                                        <th class="f-b">Administrador</th>
                                        <th class="f-b">Status</th>
                                        <th class="text-center f-b">Opciones</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.communityList)
                                    {
                                        <tr>
                                            <td>@item.first_name</td>
                                            <td class="text-center">@item.admin_email</td>
                                            <td class="text-center">
                                                @if (item.is_active == true)
                                                {
                                                    <button type="button" class="btn btn-primary waves-effect waves-light btn-sm">Activo</button>
                                                }
                                                else
                                                {
                                                    <button type="button" class="btn btn-danger waves-effect waves-light btn-sm">Inactivo</button>
                                                }
                                            </td>
                                            <td class="text-center">
                                                <a href="@Url.Action("panel", "control", new { id= item.id })">
                                                    <button type="button" class="btn btn-primary waves-effect waves-light btn-sm mr-1 mb-1"
                                                            data-toggle="tooltip" data-placement="top" title="Editar">
                                                        <i class="mdi mdi-lead-pencil"></i>
                                                    </button>
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div><!-- end row -->
        <!-- back button -->
        <div class="row pb-4">
            <div class="col-md-6">
                <a href="javascript:history.back()"><button type="button" class="btn btn-light waves-effect waves-light"><i class="mdi mdi-keyboard-return"></i> Regresar</button></a>
            </div>
        </div>
        <!-- end back button -->

    </div><!-- container -->

</div> <!-- Page content Wrapper -->