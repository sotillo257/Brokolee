
@{
    ViewBag.Title = "control panel";
    Page.Title = "Brokolee Software - Asistente Virtual para la Administración de Comunidades";
}
<div class="page-content-wrapper">

    <div class="container-fluid">

        <div class="row">
            <div class="col-sm-12">
                <div class="page-title-box">
                    <div class="float-left">
                        <div class="breadcrumb float-md-right">
                            <h4 class="page-title">Panel de control</h4>
                        </div>
                    </div>
                    <div class="float-right">
                        <ul class="breadcrumb float-md-right">
                            <li class="breadcrumb-item"><a href="@Url.Action("panel", "control")" class="text-success"><i class="mdi mdi-home-modern"></i> Panel de control</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        <!-- end page title end breadcrumb -->
        <div class="row">

            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                         <div class="table-responsive">
                             <table class="table table-striped table-bordered normal"
                                    style="border-collapse: collapse; border-spacing: 0; width: 100%;">
                                 <thead class="header-table">
                                     <tr>
                                         <th class="f-b">Título</th>
                                         <th class="f-b">Contenido</th>
                                         <th class="f-b">Autor</th>
                                         <th class="f-b">Fecha</th>
                                     </tr>
                                 </thead>
                                 <tbody>
                                     @foreach(var item in Model.blogList)
                                     {
                                         <tr>
                                             <td>@item.title</td>
                                             <td class="text-center">@item.content</td>
                                             <td class="text-center">@item.author</td>
                                             <td>@Convert.ToDateTime(item.blogdate).ToString("MM/dd/yyyy | hh:mm")</td>
                                         </tr>
                                     }
                                 </tbody>
                             </table>
                         </div>
                    </div>
                </div>
            </div>
        </div><!-- end row -->

    </div><!-- container -->

</div> <!-- Page content Wrapper -->