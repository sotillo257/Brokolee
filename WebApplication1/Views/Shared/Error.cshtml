@model System.Web.Mvc.HandleErrorInfo

@{
    ViewBag.Title = "Error";
}

<div style="background-color: #A52A2A; color: black; height: 10px;">
</div>
<div style="background-color: #F5F5DC; color: black; height: 170px;">
    <div style=" padding:20px;">
        <h3>
            Application Error:
        </h3>
        <h4>
            Sorry, The Page, You are Looking for is not found.
        </h4>
        @if (Session["USER_ROLE"] != null)
        {
            @if (Convert.ToInt32(Session["USER_ROLE"]) == 3)
            {
                <h6>@Html.ActionLink("Go Back To Home Page", "panel", "control", new { area = "webmaster" })</h6>
            }
            else if (Convert.ToInt32(Session["USER_ROLE"]) == 2)
            {
                <h6>@Html.ActionLink("Go Back To Home Page", "panel", "control", new { area = "coadmin" })</h6>
            }
            else if (Convert.ToInt32(Session["USER_ROLE"]) == 1)
            {
                <h6>@Html.ActionLink("Go Back To Home Page", "panel", "control")</h6>
            }
        }
        else
        {
            <h6>@Html.ActionLink("Go Back To Home Page", "iniciar", "iniciar")</h6>
        }
        <br />
        <br />
    </div>
</div>
<div style="background-color: #A52A2A; color: White; height: 20px;">
</div>

